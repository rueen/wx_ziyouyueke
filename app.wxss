/* 重置默认样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Open Sans', 'Helvetica Neue', sans-serif;
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

.role-tag {
  display: flex;
  align-items: center;
  background-color: #f0f9ff;
  border: 1rpx solid #007aff;
  border-radius: 16rpx;
  padding: 6rpx 12rpx;
}

.role-text {
  font-size: 22rpx;
  color: #007aff;
}