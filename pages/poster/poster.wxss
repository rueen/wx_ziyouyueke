/* pages/poster/poster.wxss */
@import '/style/iconfont.wxss';

page{
  background-color: #f7f7f7;
}
.poster-page {
  width: 100%;
  height: 100vh;
}

.poster-image-wrap {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx;
}

.label{
  display: flex;
  flex-direction: column;
}
.label-text {
  font-size: 32rpx;
  color: #333;
  font-weight: normal;
}
.label-desc{
  font-size: 24rpx;
  color: #999;
}

.upload-container {
  width: 150rpx;
  height: 225rpx;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  background-color: #f2f2f7;
  border: 1rpx dashed #d1d1d6;
}

.upload-icon {
  font-size: 30rpx;
  margin-bottom: 10rpx;
  color: #666;
}

.upload-text {
  font-size: 24rpx;
  color: #666;
}

.image-preview {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.replace-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: rgba(0, 0, 0, 0.4);
  color: #fff;
  font-size: 24rpx;
}
.poster-list{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: calc(150rpx + env(safe-area-inset-bottom));
}
.poster-item{
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 16rpx;
  overflow: hidden;
}
.poster-buttons{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  height: 90rpx;
}
.download-button{
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #bbb;
  color: #000;
}