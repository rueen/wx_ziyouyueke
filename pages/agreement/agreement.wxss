/**
 * pages/agreement/agreement.wxss
 * 用户协议和隐私政策页面样式
 */

.container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 标签切换 */
.tab-container {
  display: flex;
  background-color: #ffffff;
  margin: 0 32rpx 32rpx;
  border-radius: 16rpx;
  padding: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.tab-item.tab-active {
  background-color: #333;
}

.tab-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #666666;
}

.tab-item.tab-active .tab-text {
  color: #ffffff;
}

/* 内容容器 */
.content-container {
  margin: 0 40rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding-bottom: 100rpx;
}

/* 章节样式 */
.section {
  margin-bottom: 48rpx;
}

.section:last-child {
  margin-bottom: 0;
}

/* 标题样式 */
.section-title {
  display: block;
  font-size: 48rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 16rpx;
  text-align: center;
}

.update-time {
  display: block;
  font-size: 28rpx;
  color: #86868b;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 章节标题 */
.section-header {
  display: block;
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
}

/* 章节内容 */
.section-content {
  display: block;
  font-size: 30rpx;
  color: #444;
  line-height: 1.8;
  white-space: pre-line;
  word-wrap: break-word;
  letter-spacing: 0.5rpx;
}