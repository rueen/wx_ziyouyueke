/* pages/categoriesList/categoriesList.wxss */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.list{
  display: flex;
  flex-direction: column;
  padding: 20rpx 30rpx 160rpx;
}
.categorie-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: transform 0.2s ease;
  border-radius: 20rpx;
}
.categorie-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}
.name{
  font-size: 30rpx;
  color: #333;
}
/* 箭头 */
.arrow-icon {
  color: #999;
  font-size: 28rpx;
}

/* 添加学员按钮 */
.add-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.add-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-button::after {
  border: none;
}

.add-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}