<!--pages/categoriesList/categoriesList.wxml-->
<navBar title="课程设置" />
<layout>
  <view class="list" wx:if="{{list.length > 0}}">
    <view class="categorie-item" wx:for="{{list}}" wx:key="id" bindtap="openDetail" data-item="{{item}}">
      <text class="name">{{ item.name }}</text>
      <text class="iconfont icon-arrow-r arrow-icon"></text>
    </view>
  </view>

  <!-- 加载状态 -->
  <view class="loading-state" wx:elif="{{isLoading && list.length === 0}}">
    <text class="loading-text">加载中...</text>
  </view>

  <!-- 空状态 -->
  <emptyState 
    wx:else
    type="no-data"
    title="暂无课程"
    description="您还没有添加课程，下拉可刷新">
  </emptyState>

  <!-- 添加课程按钮 -->
  <view class="add-button-container">
    <button class="add-button" bindtap="handleAdd">添加课程</button>
  </view>
</layout>