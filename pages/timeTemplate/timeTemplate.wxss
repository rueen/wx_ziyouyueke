/**
 * pages/timeTemplate/timeTemplate.wxss
 * 时间模板页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 通用样式 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.edit-btn,
.add-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 8rpx 16rpx;
  background-color: #f0f9ff;
  border-radius: 16rpx;
}

/* 预约设置区域 */
.settings-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.settings-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

.setting-value {
  font-size: 30rpx;
  color: #666;
}

.setting-switch {
  transform: scale(0.8);
}

/* 时间段模板区域 */
.template-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
}

.template-status {
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background-color: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
}

.status-text {
  font-size: 26rpx;
  color: #856404;
}

.time-slots {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.time-slot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.time-slot.disabled {
  background-color: #f5f5f5;
  opacity: 0.6;
}

.time-slot.disabled .time-text {
  color: #999;
}

.time-info {
  flex: 1;
}

.time-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.delete-btn {
  font-size: 26rpx;
  color: #ff3b30;
  padding: 8rpx 16rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 1rpx solid #ff3b30;
}

.delete-btn:active {
  background-color: #ff3b30;
  color: #fff;
}

/* 空状态样式已移至通用组件 */

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-content {
  padding: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-input {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #fafafa;
}

.picker-view {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  font-size: 30rpx;
  background-color: transparent;
}

.cancel-btn {
  color: #999;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-btn {
  color: #007aff;
  font-weight: 600;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
} 