/**
 * pages/timeTemplate/timeTemplate.wxss
 * 时间模板页面样式
 */
@import '/style/iconfont.wxss';

page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}
.container{
  padding: 16rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
}

/* 通用样式 */
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  height: 50rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.section-title-small{
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.edit-btn,
.add-btn{
  font-size: 26rpx;
  color: #007aff;
  padding: 8rpx 16rpx;
  background-color: #f0f9ff;
  border-radius: 16rpx;
}
.save-btn {
  color: #fff;
  background-color: #007aff;
}

/* 预约设置区域 */
.settings-section {
  background-color: #fff;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border-radius: 16rpx;
}

.settings-content {
  display: flex;
  flex-direction: column;
}

.setting-item {
  min-height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 30rpx;
  color: #333;
}

.setting-value {
  font-size: 30rpx;
  color: #666;
}

.time-type{
  margin-top: 16rpx;
}
.time-type-radio-group{
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

/* 日期模板区域 */
.data-section {
  margin-top: 16rpx;
}
.date-slots{
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}
.date-slot{
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 12rpx 0 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
}

/* 时间段模板区域 */
.template-section {
  padding: 24rpx 0;
}

.template-status {
  margin-bottom: 20rpx;
  padding: 16rpx 20rpx;
  background-color: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
}

.status-text {
  font-size: 26rpx;
  color: #856404;
}

.time-slots {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.time-slot {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 100rpx;
  padding: 0 24rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.time-info {
  flex: 1;
}

.time-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.delete-btn {
  font-size: 26rpx;
  color: #ff3b30;
  padding: 8rpx 16rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 1rpx solid #ff3b30;
}

.delete-btn:active {
  background-color: #ff3b30;
  color: #fff;
}

/* 空状态样式已移至通用组件 */

/* 弹窗样式 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-content {
  padding: 30rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx;
}

.form-item:last-child {
  margin-bottom: 0;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.form-input {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 30rpx;
  background-color: #fafafa;
}

.picker-view {
  height: 88rpx;
  padding: 0 24rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fafafa;
  display: flex;
  align-items: center;
}

.picker-text {
  font-size: 30rpx;
  color: #333;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.cancel-btn,
.confirm-btn {
  flex: 1;
  height: 88rpx;
  border: none;
  font-size: 30rpx;
  background-color: transparent;
}

.cancel-btn {
  color: #999;
  border-right: 1rpx solid #f0f0f0;
}

.confirm-btn {
  color: #007aff;
  font-weight: 600;
}

.cancel-btn::after,
.confirm-btn::after {
  border: none;
}

.date-slots .section-title{
  font-weight: normal;
  font-size: 28rpx;
}
.date-slots .time-slot{
  height: 80rpx;
  background: none;
  padding: 0;
}
/* 自由日程模板样式 */
.free-time-range-container {
  margin-bottom: 32rpx;
}

.free-time-hint {
  padding: 24rpx;
  background-color: #e7f3ff;
  border-left: 6rpx solid #007aff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.hint-text {
  font-size: 24rpx;
  color: #007aff;
  line-height: 1.6;
}

.time-range-selector {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.time-range-item {
  flex: 1;
}

.time-label {
  font-size: 24rpx;
  color: #86868b;
  display: block;
  margin-bottom: 12rpx;
}

.picker-display {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border: 2rpx solid #e5e5ea;
  font-size: 28rpx;
  color: #1d1d1f;
}

.picker-display.disabled {
  background-color: #f5f5f5;
  color: #c7c7cc;
}

.time-range-separator {
  padding-top: 32rpx;
}

.separator-line {
  font-size: 28rpx;
  color: #86868b;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  display: flex;
  gap: 20rpx;
}
.save-button {
  flex: 1;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 30rpx;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.cancel-button {
  flex: 1;
  height: 96rpx;
  background-color: #fff;
  color: #000;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: 2rpx solid #000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.save-button::after,
.cancel-button::after {
  border: none;
}