/**
 * pages/regularCourseManagement/regularCourseManagement.wxss
 * 常规课管理页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding-bottom: calc(220rpx + env(safe-area-inset-bottom));
}

/* 信息区块 */
.info-section {
  background-color: #fff;
  padding: 32rpx;
  margin: 16rpx 16rpx 0 16rpx;
  border-radius: 16rpx;
}

.info-section .tips {
  display: flex;
  justify-content: center;
}

.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.expire-date-title {
  color: #333;
  font-size: 28rpx;
}

.section-info {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}

/* 信息项 */
.info-label {
  font-size: 28rpx;
  color: #000;
  padding: 12rpx 0;
}

.course-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 80rpx;
  background: #f5faff;
  padding: 0 16rpx;
}

.info-value {
  display: flex;
  align-items: center;
}

.lessons-count {
  font-size: 28rpx;
  font-weight: 600;
}

.lessons-count.active {
  color: #007aff;
}

.lessons-count.empty {
  color: #ff3b30;
}

.expire-date-text {
  font-size: 28rpx;
  color: #333;
}

/* 编辑状态 */
.edit-value-container {
  display: flex;
  align-items: center;
}

.clear-expire {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #ccc;
  margin-right: 10rpx;
}

.clear-expire .icon-close {
  font-size: 18rpx;
  color: #fff;
}

.edit-input {
  width: 120rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  border: 1rpx solid #e9ecef;
}

.edit-input:focus {
  border-color: #007aff;
  background-color: #fff;
}

.edit-unit {
  font-size: 26rpx;
  color: #666;
  margin-left: 8rpx;
}

.tips-text {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.4;
}

/* 课程设置入口 */
.course-list {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  height: 100rpx;
  padding: 0 32rpx;
  font-size: 28rpx;
  color: #333;
  margin: 16rpx 16rpx 0 16rpx;
  border-radius: 16rpx;
}

.course-list .arrow {
  font-size: 24rpx;
  color: #999;
}

/* 编辑操作按钮 */
.edit-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx;
}

.cancel-btn,
.save-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background-color: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.cancel-btn:active {
  background-color: #e9ecef;
}

.save-btn {
  background-color: #007aff;
  color: #fff;
}

.save-btn:active {
  background-color: #0056cc;
}

.cancel-btn::after,
.save-btn::after {
  border: none;
}

/* 操作按钮 */
.action-buttons {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  display: flex;
  gap: 20rpx;
}

.edit-button {
  flex: 1;
  height: 96rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 30rpx;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

.edit-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.edit-button::after {
  border: none;
}

