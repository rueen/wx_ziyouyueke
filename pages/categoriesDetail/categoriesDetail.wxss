/* pages/categoriesDetail/categoriesDetail.wxss */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}
.container {
  padding-bottom: 140rpx;
}
.info-section{
  background-color: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
}
.section-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}
.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}
.name{
  font-size: 30rpx;
  color: #000;
}
.icon-section{
  display: flex;
  align-items: center;
}
.del-btn{
  font-size: 30rpx;
  color: #f00;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  margin-right: 10rpx;
}
.edit-btn {
  font-size: 40rpx;
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
}
.edit-input {
  height: 80rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #e9ecef;
}
/* 备注区域 */
.remark-container {
  width: 100%;
}
.remark-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

.remark-textarea {
  width: 100%;
  min-height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #e9ecef;
  line-height: 1.5;
}

.remark-textarea:focus {
  border-color: #007aff;
  background-color: #fff;
}

.remark-textarea::placeholder {
  color: #999;
}
/* 列表 */
.studentLessons-item{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.studentLessons-item .left{
  display: flex;
  align-items: center;
}
.studentAvatar{
  width: 60rpx;
  height: 60rpx;
  border-radius: 6rpx;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}
.avatar-img{
  width: 100%;
  height: 100%;
}
.studentName{
  font-size: 30rpx;
  color: #333;
  margin-right: 30rpx;
}
.remainingLessons{
  font-size: 30rpx;
  color: #007aff;
}
/* 编辑操作按钮 */
.edit-actions {
  display: flex;
  gap: 20rpx;
  padding: 40rpx;
}

.cancel-btn,
.save-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background-color: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.cancel-btn:active {
  background-color: #e9ecef;
}

.save-btn {
  background-color: #007aff;
  color: #fff;
}

.save-btn:active {
  background-color: #0056cc;
}

.cancel-btn::after,
.save-btn::after {
  border: none;
}