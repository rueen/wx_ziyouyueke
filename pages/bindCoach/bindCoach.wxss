/* pages/bindCoach/bindCoach.wxss */
@import '/style/iconfont.wxss';

page{
  background: #e4e3eb;
}
/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-content {
  text-align: center;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 教练信息容器 */
.poster_image{
  width: 100%;
  position: relative;
  z-index: 1;
}
.poster-mask{
  position: relative;
  z-index: 2;
  margin-top: -200rpx;
}
.poster-mask-image{
  width: 100%;
}
.nickname{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.nickname-text{
  font-size: 60rpx;
  color: #ec3a1c;
  font-weight: 600;
}

/* content */
.content{
  padding: 0 50rpx 100rpx;
  position: relative;
  z-index: 3;
  background-color: #e4e3eb;
  font-size: 32rpx;
  color: #022d58;
  margin-top: -50rpx;
}
.motto{
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
}
.motto-inner{
  line-height: 60rpx;
}
.motto-text{
  color: #022d58;
  font-weight: 600;
  font-size: 36rpx;
}
.title{
  background: #022d58;
  display: inline-block;
  padding: 0 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #fff;
  margin-top: 30rpx;
  margin-bottom: 10rpx;
}
.intro{
  display: flex;
  flex-direction: column;
}

/* 绑定提示 */
.bind-tips {
  display: flex;
  align-items: flex-start;
  background-color: #f0f9ff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #007aff;
}

.tips-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.tips-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

.categories{
  margin-top: 10rpx;
}
.categories-name{
  color: #ec3a1c;
  margin-right: 10rpx;
}

/* 绑定按钮区域 */
.bind-button-container {
  padding-top: 20rpx;
}

.bind-button {
  width: 100%;
  height: 100rpx;
  background-color: #ec3a1c;
  border-radius: 50rpx;
  border: none;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.bind-button:active {
  transform: scale(0.98);
}

.bind-button.loading {
  background-color: #ccc;
  transform: none;
}

.bind-button[disabled] {
  opacity: 0.6;
  background-color: #ccc;
}