/* pages/bindCoach/bindCoach.wxss */
@import '/style/iconfont.wxss';

.container {
  min-height: 100vh;
  background-color: #f4f5f6;
  padding: 40rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-content {
  text-align: center;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 教练信息容器 */
.coach-info-container {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  margin: 20rpx 0;
}

/* 教练头像和基本信息 */
.coach-header {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  margin-right: 30rpx;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 60rpx;
  border: 4rpx solid #fff;
}

.coach-basic-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.coach-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.coach-specialty {
  font-size: 28rpx;
  color: #007aff;
  font-weight: 500;
}

/* 教练简介区域 */
.coach-intro-section {
  margin-bottom: 40rpx;
}

.section-title {
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  position: relative;
  padding-bottom: 12rpx;
}

.intro-content {
  background-color: #f4f5f6;
  border-radius: 16rpx;
  padding: 24rpx;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 绑定提示 */
.bind-tips {
  display: flex;
  align-items: flex-start;
  background-color: #f0f9ff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 40rpx;
  border: 1rpx solid #007aff;
}

.tips-icon {
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.tips-icon .iconfont {
  font-size: 32rpx;
  color: #007aff;
}

.tips-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.tips-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.tips-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
}

/* 绑定按钮区域 */
.bind-button-container {
  padding-top: 20rpx;
}

.bind-button {
  width: 100%;
  height: 100rpx;
  background-color: #333;
  border-radius: 50rpx;
  border: none;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.bind-button:active {
  transform: scale(0.98);
  background-color: #222;
}

.bind-button.loading {
  background-color: #ccc;
  transform: none;
}

.bind-button[disabled] {
  opacity: 0.6;
  background-color: #ccc;
}

/* 响应式设计 */
@media (max-width: 400px) {
  .container {
    padding: 32rpx;
  }
  
  .coach-header {
    flex-direction: column;
    text-align: center;
  }
  
  .coach-avatar {
    margin-right: 0;
    margin-bottom: 20rpx;
  }
  
  .coach-basic-info {
    align-items: center;
  }
  
  .coach-info-container {
    padding: 32rpx;
  }
} 