/**
 * pages/courseList/courseList.wxss
 * 课程列表页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* Tab切换 */
.tab-container {
  background-color: #fff;
  margin-bottom: 16rpx;
}

.tab-list {
  display: flex;
}

.tab-item {
  flex: 1;
  padding: 24rpx 20rpx;
  text-align: center;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #333;
  font-weight: 600;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
  padding: 0 16rpx;
}

.course-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  transition: transform 0.2s ease;
}

.course-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.course-content {
  padding: 32rpx;
}

/* 人员信息 */
.person-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.person-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.person-details {
  display: flex;
  flex-direction: column;
}

.person-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 4rpx;
}

.person-role {
  font-size: 24rpx;
  color: #999;
}

.status-badge{
  position: absolute;
  right: 0;
}

/* 课程详情 */
.course-details {
  display: flex;
  flex-direction: column;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
  width: 80rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.cancel-reason {
  color: #ff3b30;
}

/* 加载更多提示样式 */
.load-more-container {
  padding: 40rpx 0;
  text-align: center;
}

.load-more-loading {
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

.load-more-end {
  display: flex;
  align-items: center;
  justify-content: center;
}

.end-text {
  font-size: 26rpx;
  color: #ccc;
}
.categoryName{
  color: #f2652e;
}