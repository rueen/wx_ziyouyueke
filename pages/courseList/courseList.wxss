/**
 * pages/courseList/courseList.wxss
 * 课程列表页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* Tab切换 */
.tab-container {
  background-color: #fff;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  padding: 8rpx;
}

.tab-list {
  display: flex;
}

.tab-item {
  flex: 1;
  padding: 16rpx 20rpx;
  text-align: center;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
}

.tab-item.active .tab-text {
  color: #333;
  font-weight: 600;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
}

.course-item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.course-content {
  padding: 32rpx;
}

/* 教练信息 */
.coach-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.coach-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.coach-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 课程详情 */
.course-details {
  display: flex;
  flex-direction: column;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
  width: 80rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 操作按钮 */
.course-actions {
  display: flex;
  padding: 24rpx 32rpx;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  padding: 16rpx 32rpx;
  font-size: 26rpx;
  border-radius: 20rpx;
  border: none;
  font-weight: 500;
  min-width: 120rpx;
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #fff;
  color: #999;
  border: 1rpx solid #e9ecef;
}

.cancel-btn:active {
  background-color: #f5f5f5;
}

.confirm-btn {
  background-color: #007aff;
  color: #fff;
}

.confirm-btn:active {
  background-color: #0056b3;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  text-align: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
} 