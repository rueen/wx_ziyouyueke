/**
 * pages/courseList/courseList.wxss
 * 课程列表页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 0 20rpx 20rpx;
}

/* Tab切换 */
.tab-container {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.tab-list {
  display: flex;
}

.tab-item {
  flex: 1;
  padding: 24rpx 20rpx;
  text-align: center;
  border-radius: 12rpx;
}

.tab-text {
  font-size: 28rpx;
  color: #999;
  font-weight: 500;
}

.tab-item.active .tab-text {
  color: #333;
  font-weight: 600;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
}

.course-item {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}

.course-content {
  padding: 32rpx;
}

/* 教练信息 */
.coach-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.coach-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.coach-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 课程详情 */
.course-details {
  display: flex;
  flex-direction: column;
}

.detail-item {
  display: flex;
  margin-bottom: 12rpx;
  line-height: 1.5;
}

.detail-item:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
  width: 80rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

.cancel-reason {
  color: #ff3b30;
}

/* 操作按钮 */
.course-actions {
  margin-top: 30rpx;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

/* 按钮组布局 */
.button-group {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  border: none;
  border-radius: 32rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #007aff;
  color: #fff;
}

.primary-btn {
  background-color: #34c759;
  color: #fff;
}

.verify-btn {
  background-color: #ff9500;
  color: #fff;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 取消原因模态框 */
.cancel-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.cancel-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 24rpx 24rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.cancel-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx 40rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 40rpx;
}

.cancel-reason-input {
  width: 100%;
  min-height: 200rpx;
  padding: 24rpx;
  border: 1rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.6;
  background-color: #fafafa;
}

.char-count {
  text-align: right;
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.modal-footer {
  display: flex;
  padding: 20rpx 40rpx 40rpx;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-btn::after {
  border: none;
}

.cancel-modal-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-modal-btn {
  background-color: #007aff;
  color: #fff;
}

.confirm-modal-btn.active {
  background-color: #ff3b30;
}

.modal-btn:active {
  opacity: 0.8;
}

/* 空状态样式已移至通用组件 */

/* 课程码弹窗样式 */
.course-code-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.course-code-modal.show {
  opacity: 1;
  visibility: visible;
}

.course-code-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 640rpx;
  max-height: 80vh;
  border-radius: 20rpx;
  overflow: hidden;
}

.course-code-modal.show .course-code-content {
  transform: translate(-50%, -50%) scale(1);
}

.course-code-body {
  max-height: 60vh;
  overflow-y: auto;
}

.course-info-summary {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.info-row {
  display: flex;
  margin-bottom: 12rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.qr-code-container {
  text-align: center;
}

.qr-code-placeholder {
  margin-bottom: 20rpx;
}

.qr-code-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 20rpx;
}

.qr-code-box {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fafafa;
}

.code-text {
  font-size: 20rpx;
  color: #666;
  word-break: break-all;
  padding: 20rpx;
  text-align: center;
  line-height: 1.4;
}

.qr-tips {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.full-width {
  width: 100%;
} 