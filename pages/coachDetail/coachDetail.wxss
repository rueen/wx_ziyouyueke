/**
 * pages/coachDetail/coachDetail.wxss
 * 教练详情页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 140rpx;
}

/* 教练基础信息 */
.coach-header {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coach-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.coach-specialty {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.remaining-lessons {
  display: flex;
  align-items: center;
}

.lessons-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.lessons-count {
  font-size: 26rpx;
  font-weight: 600;
}

.lessons-count.active {
  color: #007aff;
}

.lessons-count.empty {
  color: #ff3b30;
}

/* 信息区块 */
.intro-section,
.time-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: block;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 可约时间 */
.time-list {
  display: flex;
  flex-direction: column;
}

.time-item {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.time-item:last-child {
  margin-bottom: 0;
}

.time-text {
  font-size: 28rpx;
  color: #333;
}

/* 约课按钮 */
.book-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.book-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-button:active {
  background-color: #555;
}

.book-button::after {
  border: none;
} 