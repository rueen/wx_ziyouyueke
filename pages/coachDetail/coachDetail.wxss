/**
 * pages/coachDetail/coachDetail.wxss
 * 教练详情页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding-bottom: 140rpx;
}

/* 教练基础信息 */
.coach-header {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.coach-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coach-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.coach-specialty {
  font-size: 28rpx;
  color: #007aff;
  margin-bottom: 16rpx;
}

.remaining-lessons {
  display: flex;
  align-items: center;
}

.lessons-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.lessons-count {
  font-size: 26rpx;
  font-weight: 600;
}

.lessons-count.active {
  color: #007aff;
}

.lessons-count.empty {
  color: #ff3b30;
}

/* 信息区块 */
.intro-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.time-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 0 20rpx 0;
  margin-bottom: 20rpx;
}

.time-section .section-title {
  padding: 0 40rpx;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  display: block;
}

.intro-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

/* 约课按钮 */
.book-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
  z-index: 100;
}

.book-button {
  width: 100%;
  height: 96rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-button:active {
  background-color: #0051d5;
  transform: scale(0.98);
}

.book-button::after {
  border: none;
}

/* time-selector 组件样式覆盖 */
.time-section time-selector {
  background-color: transparent;
}

.time-section time-selector .time-slots-container {
  padding: 0 40rpx 20rpx 40rpx;
}

.time-section time-selector .date-selector {
  padding: 20rpx 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.time-section time-selector .time-slot {
  background-color: #f8f9fa;
  border: none;
  margin-bottom: 12rpx;
}

.time-section time-selector .time-slot.booked {
  background-color: #e6f3ff;
}

.time-section time-selector .time-slot.free {
  background-color: #f0f0f0;
} 