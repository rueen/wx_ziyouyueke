/**
 * pages/donationList/donationList.wxss
 * 赞助墙页面样式
 */

.donation-list-page {
  min-height: 100vh;
  background-color: #f8f9fa;
  padding: 16rpx;
}

/* 头部卡片 */
.header-card {
  background: #007aff;
  border-radius: 16rpx;
  padding: 48rpx;
  text-align: center;
  margin-bottom: 16rpx;
}

.header-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.header-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 16rpx;
}

.header-count {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 赞助墙 */
.donation-wall {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.wall-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
}

.donation-time {
  font-size: 24rpx;
  color: #86868b;
}

.donation-content {
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.donation-amount {
  display: flex;
  align-items: baseline;
  justify-content: center;
}

.amount-symbol {
  font-size: 32rpx;
  color: #007aff;
  font-weight: 600;
}

.amount-value {
  font-size: 48rpx;
  color: #007aff;
  font-weight: 600;
}

.donation-message {
  padding: 24rpx;
  background-color: #fff8e1;
  border-radius: 12rpx;
  border-left: 4rpx solid #ffc107;
}

.message-text {
  font-size: 28rpx;
  color: #1d1d1f;
  line-height: 1.6;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text,
.no-more-text {
  font-size: 28rpx;
  color: #86868b;
}

