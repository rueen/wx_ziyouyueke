/**
 * pages/courseDetail/courseDetail.wxss
 * 课程详情页面样式
 */
@import '/style/iconfont.wxss';

page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 140rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 课程详情内容 */
.course-detail-content {
  min-height: calc(100vh - 200rpx);
}

.course-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 16rpx;
}

/* 人员信息 */
.person-info {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  position: relative;
}

.person-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.person-details {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.person-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.person-role {
  font-size: 26rpx;
  color: #999;
}

/* 状态标签 */
.status-badge {
  position: absolute;
  right: 0;
  top: 0;
}

/* 课程信息区域 */
.course-info-section {
  display: flex;
  flex-direction: column;
}

.info-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding: 16rpx 0;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.info-icon .iconfont{
  color: #333;
}

.info-content {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.info-label {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  word-break: break-all;
}

.cancel-reason {
  color: #ff3b30;
}

/* 底部操作按钮 */
.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 20rpx 30rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
  z-index: 999;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.button-group {
  display: flex;
  gap: 20rpx;
  width: 100%;
}

/* 单个按钮时的样式 */
.single-button {
  display: flex;
  justify-content: center;
  width: 100%;
}

.single-button .action-btn {
  max-width: 400rpx;
  flex: none;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  line-height: 80rpx;
  padding: 0;
}

.action-btn::after {
  border: none;
}

.cancel-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background-color: #007aff;
  color: #fff;
}

.primary-btn {
  background-color: #34c759;
  color: #fff;
}

.verify-btn {
  background-color: #ff9500;
  color: #fff;
}

.action-btn:active {
  opacity: 0.8;
  transform: scale(0.98);
}

/* 模态框样式 */
.cancel-modal,
.course-code-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.cancel-modal.show,
.course-code-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: 60rpx;
}

.cancel-modal.show .modal-content,
.course-code-modal.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 32rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.cancel-reason-input {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  margin-top: 12rpx;  
  font-size: 24rpx;
  color: #999;
}

.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 72rpx;
  border: none;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-btn::after {
  border: none;
}

.cancel-modal-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-modal-btn {
  background-color: #007aff;
  color: #fff;
}

.full-width {
  flex: none;
  width: 100%;
}

/* 课程码相关样式 */
.course-code-content {
  max-height: 90vh;
}

.course-code-body {
  padding: 30rpx;
}

.qr-code-container {
  text-align: center;
}

.qr-code-placeholder {
  margin-bottom: 20rpx;
}

.qr-code-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 20rpx;
  display: block;
}

.qr-code-canvas {
  width: 150px;
  height: 150px;
  position: fixed;
  left: -9999px;
  top: -9999px;
  z-index: -1;
}

.qr-code-image {
  width: 300rpx;
  height: 300rpx;
  margin: 0 auto;
  border: 2rpx solid #e5e5ea;
  border-radius: 12rpx;
  background-color: #ffffff;
  display: block;
}

.qr-tips {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 核销确认弹窗样式 */
.verify-confirm-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.verify-confirm-modal.show {
  opacity: 1;
  visibility: visible;
}

.verify-confirm-modal.show .modal-content {
  transform: translateY(0);
}

.confirm-content {
  text-align: center;
  padding: 20rpx 0;
}

.confirm-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 20rpx;
}

.confirm-tips {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  display: block;
} 
.categoryName{
  color: #f2652e;
}