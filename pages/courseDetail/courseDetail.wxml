<!--pages/courseDetail/courseDetail.wxml-->
<navBar title="课程详情" />
<layout>
  <!-- 加载状态 -->
  <view wx:if="{{loading}}" class="loading-container">
    <text class="loading-text">加载中...</text>
  </view>

  <!-- 课程详情内容 -->
  <view wx:else class="course-detail-content">
    <!-- 课程信息卡片 -->
    <view class="course-card">
      <!-- 人员信息 -->
      <view class="person-info">
        <view class="person-avatar" bindtap="onStudentDetail">
          <image src="{{courseInfo.displayAvatar}}" class="avatar-img"></image>
        </view>
        <view class="person-details" bindtap="onStudentDetail">
          <text class="person-name">{{courseInfo.displayName}}</text>
          <text class="person-role">{{courseInfo.displayRole}}</text>
        </view>
        <view>
          <!-- <view class="view-all" bind:tap="handleViewCourseList">
            <text>查看所有记录</text>
            <text class="iconfont icon-arrow-r"></text>
          </view> -->
          <view class="view-all" bind:tap="handleViewPrevCourse">
            <text>查看上次课内容</text>
            <text class="iconfont icon-arrow-r"></text>
          </view>
        </view>
      </view>

      <!-- 课程详细信息 -->
      <view class="course-info-section">
        <view class="info-item">
          <view class="info-icon">
            <text class="iconfont icon-status"></text>
          </view>
          <view class="info-content">
            <text class="info-label">课程状态</text>
            <view class="status-badge-box">
              <!-- 课程状态 -->
              <view class="status-badge status-{{courseInfo.status}}">
                <text class="status-text">{{courseInfo.status === 'pending' ? (
                  courseInfo.isCreatedByCurrentUser ? (
                    userRole === 'coach' ? '待学员确认' : '待教练确认'
                  ) : '待确认'
                ) : 
                  courseInfo.status === 'confirmed' ? '已确认' : 
                  courseInfo.status === 'completed' ? '已完成' : 
                  courseInfo.status === 'cancelled' ? '已取消' : '未知状态'}}</text>
              </view>
            </view>
          </view>
        </view>
        <view class="info-item">
          <view class="info-icon">
            <text class="iconfont icon-leimu"></text>
          </view>
          <view class="info-content">
            <view class="info-label">
              <text>
                <text wx:if="{{courseInfo.booking_type === 2}}">卡片类型</text>
                <text wx:else>课程类型</text>
              </text>
              <text class="iconfont icon-editor" bind:tap="handleEditBookingType" wx:if="{{userRole === 'coach' && courseInfo.status !== 'completed' && courseInfo.status !== 'cancelled'}}"></text>
            </view>
            <text class="info-value categoryName" wx:if="{{courseInfo.booking_type === 2}}">{{courseInfo.card_name}}</text>
            <text class="info-value categoryName" wx:else>{{courseInfo.categoryName}}</text>
          </view>
        </view>

        <view class="info-item">
          <view class="info-icon">
            <text class="iconfont icon-shijianmoban"></text>
          </view>
          <view class="info-content">
            <view class="info-label">
              <text>上课时间</text>
              <text class="iconfont icon-editor" bind:tap="handleEditTime" wx:if="{{userRole === 'coach' && courseInfo.status !== 'completed' && courseInfo.status !== 'cancelled'}}"></text>
            </view>
            <text class="info-value">{{courseInfo.time}}</text>
          </view>
        </view>

        <view class="info-item">
          <view class="info-icon">
            <text class="iconfont icon-location"></text>
          </view>
          <view class="info-content">
            <view class="info-label">
              <text>上课地点</text>
              <text class="iconfont icon-editor" bind:tap="handleEditLocation" wx:if="{{userRole === 'coach' && courseInfo.status !== 'completed' && courseInfo.status !== 'cancelled'}}"></text>
            </view>
            <text class="info-value">{{courseInfo.location}}</text>
          </view>
        </view>

        <view class="info-item">
          <view class="info-icon">
            <text class="iconfont icon-xiaoxi"></text>
          </view>
          <view class="info-content">
            <view class="info-label">
              <text>教练备注</text>
              <text class="iconfont icon-editor" bind:tap="handleEditRemark" data-type="coach_remark" data-title="教练备注" wx:if="{{userRole === 'coach' && courseInfo.status !== 'cancelled'}}"></text>
            </view>
            <text class="info-value">{{courseInfo.coach_remark || '无'}}</text>
            <view class="info-label">
              <text>学员备注</text>
              <text class="iconfont icon-editor" bind:tap="handleEditRemark" data-type="student_remark" data-title="学员备注" wx:if="{{userRole === 'student' && courseInfo.status !== 'cancelled'}}"></text>
            </view>
            <text class="info-value">{{courseInfo.student_remark || '无'}}</text>
          </view>
        </view>

        <view class="info-item" wx:if="{{courseInfo.createTime}}">
          <view class="info-icon">
            <text class="iconfont icon-shijianmoban"></text>
          </view>
          <view class="info-content">
            <text class="info-label">预约时间</text>
            <text class="info-value">{{courseInfo.createTime}}</text>
          </view>
        </view>

        <view class="info-item" wx:if="{{courseInfo.confirmed_at}}">
          <view class="info-icon">
            <text class="iconfont icon-shijianmoban"></text>
          </view>
          <view class="info-content">
            <text class="info-label">确认时间</text>
            <text class="info-value">{{courseInfo.confirmed_at}}</text>
          </view>
        </view>

        <view class="info-item" wx:if="{{courseInfo.complete_at}}">
          <view class="info-icon">
            <text class="iconfont icon-shijianmoban"></text>
          </view>
          <view class="info-content">
            <text class="info-label">完成时间</text>
            <text class="info-value">{{courseInfo.complete_at}}</text>
          </view>
        </view>

        <view class="info-item" wx:if="{{courseInfo.cancelled_at}}">
          <view class="info-icon">
            <text class="iconfont icon-shijianmoban"></text>
          </view>
          <view class="info-content">
            <text class="info-label">取消时间</text>
            <text class="info-value">{{courseInfo.cancelled_at}}</text>
          </view>
        </view>

        <!-- 显示取消原因 -->
        <view class="info-item" wx:if="{{courseInfo.status === 'cancelled' && courseInfo.cancelReason}}">
          <view class="info-icon">
            <text class="iconfont icon-quxiaoyuanyin"></text>
          </view>
          <view class="info-content">
            <text class="info-label">取消原因</text>
            <text class="info-value cancel-reason">{{courseInfo.cancelReason}}</text>
          </view>
        </view>
      </view>
    </view>

    <!-- 上课内容展示组件 -->
    <view class="course-content">
      <course-content-display 
        course-content="{{courseContent}}"
        show-edit-button="{{userRole === 'coach'}}"
        title="上课内容记录"
        course-type="{{1}}"
        bind:edit="onShowContentModal"
      ></course-content-display>
    </view>
  </view>
</layout>

<!-- 底部操作按钮 -->
<view wx:if="{{!loading && courseInfo}}" class="bottom-actions">
  <!-- 已完成状态且是教练且没有课程内容时，显示添加内容按钮 -->
  <view wx:if="{{courseInfo.status === 'completed' && userRole === 'coach' && !courseContent}}" class="action-buttons">
    <view class="single-button">
      <button class="action-btn primary-btn" 
              bindtap="onShowContentModal">添加上课内容</button>
    </view>
  </view>

  <!-- 待确认状态的按钮 -->
  <view wx:if="{{courseInfo.status === 'pending'}}" class="action-buttons">
    <!-- 如果是课程创建人，只显示取消按钮 -->
    <view wx:if="{{courseInfo.isCreatedByCurrentUser}}" class="single-button">
      <button class="action-btn cancel-btn" 
              bindtap="onShowCancelModal">取消课程</button>
    </view>
    <!-- 如果不是课程创建人，显示取消和确认按钮 -->
    <view wx:else class="button-group">
      <button class="action-btn cancel-btn" 
              bindtap="onShowCancelModal">取消课程</button>
      <button class="action-btn confirm-btn" 
              bindtap="onConfirmCourse">确认课程</button>
    </view>
  </view>
  
  <!-- 已确认状态的按钮 -->
  <view wx:elif="{{courseInfo.status === 'confirmed'}}" class="action-buttons">
    <!-- 学员视角：查看课程码和取消按钮 -->
    <view wx:if="{{userRole === 'student'}}" class="button-group">
      <button class="action-btn cancel-btn" 
              bindtap="onShowCancelModal">取消课程</button>
      <button class="action-btn primary-btn" 
              bindtap="onViewCourseCode">查看课程码</button>
    </view>
    
    <!-- 教练视角：取消和核销按钮 -->
    <view wx:if="{{userRole === 'coach'}}" class="button-group">
      <button class="action-btn cancel-btn" 
              bindtap="onShowCancelModal">取消课程</button>
      <button class="action-btn verify-btn" 
              bindtap="onScanVerify">扫码核销</button>
    </view>
  </view>

  <!-- 已取消状态的按钮 -->
  <view wx:elif="{{courseInfo.status === 'cancelled'}}" class="action-buttons">
    <view class="single-button">
      <button class="action-btn cancel-btn" bindtap="handleDel">删除课程</button>
    </view>
  </view>
</view>

<!-- 取消原因模态框 -->
<view class="cancel-modal {{showCancelModal ? 'show' : ''}}" wx:if="{{showCancelModal}}">
  <view class="modal-overlay" bindtap="onHideCancelModal"></view>
  <view class="modal-content">
    <view class="modal-header">
      <text class="modal-title">取消课程</text>
      <text class="modal-close" bindtap="onHideCancelModal">✕</text>
    </view>
    <view class="modal-body">
      <textarea class="cancel-reason-input" 
                placeholder="请输入取消原因..." 
                value="{{cancelReason}}" 
                bindinput="onCancelReasonInput"
                maxlength="200"
                auto-height></textarea>
      <view class="char-count">{{cancelReason.length}}/200</view>
    </view>
    <view class="modal-footer">
      <button class="modal-btn cancel-modal-btn" bindtap="onHideCancelModal">取消</button>
      <button class="modal-btn confirm-modal-btn active" 
              bindtap="onConfirmCancel">确认取消</button>
    </view>
  </view>
</view>

<!-- 课程码弹窗 -->
<view class="course-code-modal {{showCourseCodeModal ? 'show' : ''}}" wx:if="{{showCourseCodeModal}}">
  <view class="modal-overlay" bindtap="onHideCourseCodeModal"></view>
  <view class="modal-content course-code-content">
    <view class="modal-header">
      <text class="modal-title">课程码</text>
      <text class="modal-close" bindtap="onHideCourseCodeModal">✕</text>
    </view>
    <view class="modal-body course-code-body">
      <!-- 二维码区域 -->
      <view class="qr-code-container">
        <view class="qr-code-placeholder">
          <text class="qr-code-text">课程二维码</text>
          <!-- 二维码Canvas -->
          <canvas 
            canvas-id="qrcode-canvas" 
            class="qr-code-canvas">
          </canvas>
          <!-- 二维码图片显示 -->
          <image 
            wx:if="{{qrCodeImagePath}}"
            src="{{qrCodeImagePath}}" 
            class="qr-code-image"
            mode="aspectFit">
          </image>
        </view>
        <text class="qr-tips">请向教练出示此二维码进行课程核销</text>
      </view>
    </view>
    <view class="modal-footer">
      <button class="modal-btn confirm-modal-btn full-width" 
              bindtap="onHideCourseCodeModal">关闭</button>
    </view>
  </view>
</view>

<!-- 核销确认弹窗 -->
<view class="verify-confirm-modal {{showVerifyConfirmModal ? 'show' : ''}}" wx:if="{{showVerifyConfirmModal}}">
  <view class="modal-overlay" bindtap="onHideVerifyConfirmModal"></view>
  <view class="modal-content">
    <view class="modal-header">
      <text class="modal-title">确认核销</text>
      <text class="modal-close" bindtap="onHideVerifyConfirmModal">✕</text>
    </view>
    <view class="modal-body">
      <view class="confirm-content">
        <text class="confirm-text">确认要核销这节课程吗？</text>
        <text class="confirm-tips">核销后课程状态将变为"已完成"，此操作不可撤销。</text>
      </view>
    </view>
    <view class="modal-footer">
      <button class="modal-btn cancel-modal-btn" bindtap="onHideVerifyConfirmModal">取消</button>
      <button class="modal-btn confirm-modal-btn active" 
              bindtap="onConfirmVerify">确认核销</button>
    </view>
  </view>
</view>

<!-- 课程内容编辑组件 -->
<course-content-editor 
  show="{{showContentModal}}"
  course-type="{{1}}"
  course-id="{{courseId}}"
  course-content="{{courseContent}}"
  bind:close="onHideContentModal"
  bind:success="onContentSaveSuccess"
></course-content-editor>

<!-- 课程类型选择器组件 -->
<categorie-selector
  show="{{showCategorieSelection}}"
  categoriesList="{{categoriesList}}"
  cardsList="{{cardsList}}"
  selectedCategorie="{{selectedCategorie}}"
  selectedCard="{{selectedCard}}"
  title="修改课程类型或卡片"
  bind:hide="onHideCategorieSelection"
  bind:selectcategorie="onSelectCategorie"
  bind:selectcard="onSelectCard"
/>

<!-- 地址选择器组件 -->
<address-selector
  show="{{showAddressSelection}}"
  selectedAddress="{{selectedAddress}}"
  coachId="{{courseInfo.coach_id}}"
  autoLoad="{{true}}"
  title="修改上课地点"
  bind:hide="onHideAddressSelection"
  bind:select="onSelectAddress"
  bind:loaded="onAddressLoaded"
  bind:loaderror="onAddressLoadError"
/>

<!-- 时间选择弹窗 -->
<view class="time-selection-modal" wx:if="{{showTimeSelection}}">
  <view class="modal-overlay" bindtap="onHideTimeSelection"></view>
  <view class="modal-content-time">
    <view class="modal-header">
      <text class="modal-title">修改上课时间</text>
      <text class="modal-close" bindtap="onHideTimeSelection">×</text>
    </view>
    <view class="modal-body-time">
      <time-selector
        coachId="{{courseInfo.coach_id}}"
        courseId="{{courseId}}"
        mode="select"
        showBookingDetails="{{false}}"
        selectedTimeSlot="{{selectedTimeSlot}}"
        bind:timeSlotTap="onTimeSlotTap"
        bind:error="onTimeSelectorError"
      />
    </view>
  </view>
</view>
 