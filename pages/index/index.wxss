/**
 * index.wxss
 * 首页样式文件
 */
@import '/style/iconfont.wxss';
page {
  min-height: 100vh;
  background-color: #fff;
}

.container{
  padding: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: #f4f5f6;
  border-radius: 24rpx;
  padding: 10rpx;
}

.user-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.username-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.username {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.role-tag {
  background-color: #f0f9ff;
  border: 1rpx solid #007aff;
  border-radius: 12rpx;
  padding: 4rpx 8rpx;
}

.role-text {
  font-size: 20rpx;
  color: #007aff;
}

/* 统计数据行 */
.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 40rpx 0;
  border-radius: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.stat-label {
  font-size: 30rpx;
  color: #333;
}

.stat-arrow{
  color: #333;
  font-size: 26rpx;
  margin-left: 10rpx;
}

/* 我的课表 */
.my-schedule {
  margin-top: 40rpx;
  margin-bottom: 160rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.schedule-tips {
  font-size: 24rpx;
  color: #999;
}

/* 日历式课表 */
.calendar-schedule {
  display: flex;
  flex-direction: column;
}

.day-schedule {
  margin-bottom: 32rpx;
}

.day-schedule:last-child {
  margin-bottom: 0;
}

/* 日期标题 */
.day-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding: 16rpx 24rpx;
  border-radius: 12rpx;
}

.day-title {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
}

.day-date {
  font-size: 26rpx;
  color: #666;
}

/* 时间段列表 */
.time-slots {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.time-slot-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid transparent;
}

.time-slot-item.available {
  border-color: #e9ecef;
  background-color: #fafafa;
}

.time-slot-item.booked {
  border-color: #007aff;
  box-shadow: 0 2rpx 8rpx rgba(0, 122, 255, 0.1);
}

/* 时间信息 */
.time-info {
  margin-bottom: 16rpx;
}

.time-range {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

/* 预约信息 */
.booking-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.person-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.person-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #f0f0f0;
}

.person-details {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.person-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.booking-status {
  font-size: 22rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  align-self: flex-start;
}

.booking-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.booking-status.confirmed {
  background-color: #e8f5e8;
  color: #4caf50;
}

.booking-status.completed {
  background-color: #e3f2fd;
  color: #1976d2;
}

.booking-status.cancelled {
  background-color: #f8d7da;
  color: #721c24;
}

/* 课程详情 */
.course-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  padding-left: 60rpx;
}

.course-location,
.course-remark {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 空闲时间 */
.empty-booking {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60rpx;
}

.empty-text {
  font-size: 24rpx;
  color: #999;
}

/* 无时间段 */
.no-time-slots {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.no-slots-text {
  font-size: 26rpx;
  color: #999;
}

/* 空状态 */
.empty-schedule {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

/* 立即约课按钮 */
.book-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.book-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-button::after {
  border: none;
}
