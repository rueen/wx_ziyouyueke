/**
 * index.wxss
 * 首页样式文件
 */
@import '/style/iconfont.wxss';
page {
  min-height: 100vh;
  background-color: #f5f5f5;
}

.container{
  padding: 16rpx;
}

/* 用户信息卡片 */
.user-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.user-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.username-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.username {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

/* 统计数据行 */
.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #f8f8f8;
  padding: 40rpx 0;
  border-radius: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.stat-label {
  font-size: 30rpx;
  color: #333;
}

.stat-arrow{
  color: #333;
  font-size: 26rpx;
  margin-left: 10rpx;
}

/* 我的课表 */
.my-schedule {
  margin-top: 16rpx;
  margin-bottom: 200rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 立即约课按钮 */
.book-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.book-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}
.book-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.book-button::after {
  border: none;
}
