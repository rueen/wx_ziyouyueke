/**
 * index.wxss
 * 首页样式文件
 */
@import '/style/iconfont.wxss';
page {
  height: 100vh;
  background-color: #fff;
  padding: 40rpx;
}

/* 用户信息卡片 */
.user-card {
  background: #f4f5f6;
  border-radius: 24rpx;
  padding: 10rpx;
}

.user-header {
  display: flex;
  align-items: center;
  padding: 20rpx;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 4rpx solid #fff;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.greeting {
  font-size: 24rpx;
  color: #666;
}

.username {
  font-size: 36rpx;
  color: #000;
}

/* 统计数据行 */
.stats-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 40rpx 0;
  border-radius: 20rpx;
}

.stat-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.stat-label {
  font-size: 30rpx;
  color: #333;
}

.stat-arrow{
  color: #333;
  font-size: 26rpx;
  margin-left: 10rpx;
}

/* 近期课程 */
.recent-courses {
  margin-top: 40rpx;
  margin-bottom: 160rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.view-more {
  font-size: 26rpx;
  color: #999;
}
.view-more .icon-arrow-r{
  font-size: 26rpx;
}

/* 课程列表 */
.course-list {
  display: flex;
  flex-direction: column;
}

.course-item {
  background-color: #f4f5f6;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.course-item:last-child {
  margin-bottom: 0;
}

.course-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.coach-info {
  display: flex;
  align-items: center;
}

.coach-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 16rpx;
  background-color: #fff;
}

.coach-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.course-status {
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.course-status.confirmed {
  background-color: #e8f5e8;
  color: #4caf50;
}

.course-details {
  display: flex;
  flex-direction: column;
}

.detail-row {
  display: flex;
  margin-bottom: 12rpx;
}

.detail-row:last-child {
  margin-bottom: 0;
}

.detail-label {
  font-size: 26rpx;
  color: #999;
  width: 80rpx;
  flex-shrink: 0;
}

.detail-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
}

.empty-courses {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 200rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 立即约课按钮 */
.book-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.book-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-button::after {
  border: none;
}
