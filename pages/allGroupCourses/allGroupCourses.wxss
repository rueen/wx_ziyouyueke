/* pages/allGroupCourses/allGroupCourses.wxss */
@import '/style/iconfont.wxss';
@import '/style/groupCourse.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 筛选标签 */
.tabs {
  display: flex;
}

.tab-item {
  flex: 1;
  position: relative;
  height: 100rpx;
  display: flex;
}
.tab-item-text{
  font-size: 32rpx;
  font-weight: 600;
  color: #85878f;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}
.active .tab-item-text{
  color: #000;
}
.tab-item .iconfont{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 70rpx;
  opacity: 0;
  line-height: 40rpx;
}
.tab-item.active .iconfont {
  color: #cff632;
  opacity: 1;
}