/**
 * pages/bookCourse/bookCourse.wxss
 * 统一约课页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 加载状态 */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.loading-text {
  font-size: 32rpx;
  color: #666;
}

/* 区域样式 */
.section {
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.remark-section{
  padding-bottom: 200rpx;
}

.section-header {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

/* 选择对象样式 */
.selected-option {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.selected-option:active {
  background-color: #f8f9fa;
}

.option-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.option-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.option-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.option-lessons {
  font-size: 26rpx;
  color: #666;
}

.change-icon {
  color: #999;
  font-size: 28rpx;
}

.select-option-btn{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
}

/* 选择列表样式 */
.selection-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.option-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.option-item:last-child {
  border-bottom: none;
}

.option-item:active {
  background-color: #f8f9fa;
}

/* 课程分类 */
.categorie-name{
  font-size: 30rpx;
  color: #333;
  display: flex;
  justify-content: space-between;
}
.remaining-lessons{
  margin-left: 12rpx;
  font-size: 30rpx;
  color: #007aff;
}

/* 地址选择样式 */
.selected-address {
  display: flex;
  align-items: center;
  padding: 30rpx;
}

.selected-address:active {
  background-color: #f8f9fa;
}

.address-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.categorie-info{
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-right: 20rpx;
}

.address-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.default-tag {
  font-size: 20rpx;
  color: #007aff;
  background-color: #e8f4ff;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  font-weight: 400;
}

.address-detail {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.select-address-btn {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  border: 2rpx dashed #ddd;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
}

.select-address-btn:active {
  background-color: #f8f9fa;
}

.btn-text {
  font-size: 28rpx;
  color: #666;
}

/* 备注样式 */
.remark-textarea {
  width: 690rpx;
  min-height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  margin: 20rpx 30rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #e9ecef;
  line-height: 1.5;
}

.remark-textarea:focus {
  border-color: #007aff;
  background-color: #fff;
}

.remark-textarea::placeholder {
  color: #999;
}

/* 提交按钮 */
.submit-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}

.submit-btn.active {
  background-color: #333;
  color: #fff;
}

.submit-btn.active:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn.disabled {
  background-color: #f5f5f5;
  color: #ccc;
}

.submit-btn::after {
  border: none;
}

/* 地址选择弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-container {
  width: 650rpx;
  max-height: 80vh;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  margin: 0 40rpx;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.modal-content {
  max-height: 60vh;
  overflow-y: auto;
}

.address-list {
  padding: 0;
}

.address-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.address-item:last-child {
  border-bottom: none;
}

.address-item:active {
  background-color: #f8f9fa;
}

.address-item .address-info {
  flex: 1;
}

.select-icon {
  color: #ddd;
  font-size: 32rpx;
}

.select-icon.selected {
  color: #007aff;
} 