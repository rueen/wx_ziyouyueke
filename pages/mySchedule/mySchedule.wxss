/* pages/mySchedule/mySchedule.wxss */

.container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 日期选择器 */
.date-selector {
  background-color: #ffffff;
  border-bottom: 1rpx solid #e9ecef;
  padding: 20rpx 0;
}

.date-scroll {
  width: 100%;
  white-space: nowrap;
}

.date-list {
  display: flex;
  padding: 0 20rpx;
}

.date-item {
  flex-shrink: 0;
  margin-right: 24rpx;
  padding: 16rpx 20rpx;
  border-radius: 16rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.date-item:last-child {
  margin-right: 20rpx;
}

.date-item.active {
  background-color: #007aff;
}

.date-item:not(.active):active {
  background-color: #f8f9fa;
}

.date-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
}

.week-day {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
  line-height: 1;
}

.date-item.active .week-day {
  color: #ffffff;
}

.month-day {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 8rpx;
  line-height: 1;
}

.date-item.active .month-day {
  color: #ffffff;
}

.date-status {
  min-height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-text {
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  line-height: 1;
}

.status-text.available {
  background-color: rgba(52, 199, 89, 0.1);
  color: #34c759;
}

.status-text.full {
  background-color: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
}

.date-item.active .status-text {
  background-color: rgba(255, 255, 255, 0.2);
  color: #ffffff;
}

/* 时间段容器 */
.time-slots-container {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999999;
}

/* 时间段列表 */
.time-slots {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.time-slot {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.time-slot:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.12);
}

.time-slot.booked {
  border-left: 6rpx solid #007aff;
}

.time-slot.free {
  border-left: 6rpx solid #e9ecef;
}

/* 时间信息 */
.time-info {
  margin-right: 24rpx;
  flex-shrink: 0;
}

.time-range {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
  line-height: 1;
}

/* 预约信息 */
.booking-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.student-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.student-name {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.booking-status {
  flex-shrink: 0;
}

.status-tag {
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 10rpx;
  background-color: #007aff;
  color: #ffffff;
  line-height: 1;
}

.location {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.4;
}

/* 空闲信息 */
.free-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.free-text {
  font-size: 28rpx;
  color: #999999;
}

/* 右箭头 */
.arrow-icon {
  font-size: 32rpx;
  color: #cccccc;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-icon .iconfont {
  font-size: 60rpx;
  color: #cccccc;
}

.empty-text {
  font-size: 32rpx;
  color: #333333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999999;
  line-height: 1.4;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .date-item {
    margin-right: 20rpx;
    padding: 12rpx 16rpx;
  }
  
  .date-content {
    min-width: 70rpx;
  }
  
  .week-day {
    font-size: 22rpx;
  }
  
  .month-day {
    font-size: 28rpx;
  }
  
  .time-slot {
    padding: 20rpx;
  }
  
  .time-range {
    font-size: 28rpx;
  }
  
  .student-name {
    font-size: 26rpx;
  }
} 