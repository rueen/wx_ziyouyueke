/**
 * pages/profile/profile.wxss
 * 我的页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 用户信息区域 */
.user-section {
  background-color: #fff;
  padding: 40rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.username {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-right: 16rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #999;
}

.arrow-icon {
  color: #ccc;
  font-size: 24rpx;
}

/* 功能菜单 */
.menu-section {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 16rpx;
  margin-top: 16rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  height: 110rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f9f9f9;
}

.menu-content {
  display: flex;
  align-items: center;
}

.menu-icon {
  font-size: 40rpx;
  color: #007aff;
  margin-right: 24rpx;
}

.menu-text {
  font-size: 32rpx;
  color: #333;
}

/* 退出登录样式 */
.logout-btn{
  width: 600rpx;
  height: 96rpx;
  background-color: #333;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  margin: 40rpx auto;
  transition: transform 0.2s ease;
}
.logout-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}