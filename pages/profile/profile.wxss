/**
 * pages/profile/profile.wxss
 * 我的页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 用户信息区域 */
.user-section {
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.user-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.username {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-right: 16rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #999;
}

.arrow-icon {
  color: #ccc;
  font-size: 24rpx;
}

/* 公共菜单 */
.menu-section{
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  margin: 0 16rpx 16rpx 16rpx;
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  flex-wrap: wrap;
}
.menu-item{
  width: 25%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
}
.menu-item::after{
  content: '';
  display: block;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  position: absolute;
  top: 28%;
  left: 50%;
  margin-left: -5rpx;
  z-index: 0;
}
.menu-item.subscribe::after{
  background-color: #cff632;
}
/* .menu-item.coach::after{
  background-color: #87c1ff;
}
.menu-item.activity::after{
  background-color: #cff632;
} */
.menu-item.support::after{
  background-color: #cff632;
}
.menu-item .iconfont{
  font-size: 50rpx;
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  position: relative;
  z-index: 1;
}
.menu-item-text{
  font-size: 24rpx;
  color: #000;
  margin-top: 5rpx;
}
.menu-item .new-tag{
  font-size: 14rpx;
  background: #ff9500;
  color: #fff;
  width: 50rpx;
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 6rpx;
  position: absolute;
  top: 16rpx; right: 16rpx;
  z-index: 3;
}


/* 退出登录样式 */
.logout-btn{
  width: 600rpx;
  height: 96rpx;
  background-color: #333;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  margin: 40rpx auto;
  transition: transform 0.2s ease;
}
.logout-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}