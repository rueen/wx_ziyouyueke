/**
 * pages/studentList/studentList.wxss
 * 学员列表页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 学员列表 */
.student-list {
  display: flex;
  flex-direction: column;
  padding: 24rpx 24rpx 160rpx;
}

.student-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
  transition: transform 0.2s ease;
  border-radius: 20rpx;
}

.student-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 学员头像 */
.student-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 学员信息 */
.student-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.student-main-info {
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  font-weight: 500;
}

.student-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
  display: block;
}
.status-badge{
  margin-left: 8rpx;
  padding: 3rpx 6rpx;
}

.student-level {
  font-size: 28rpx;
  color: #666;
}

.remaining-lessons {
  display: flex;
  align-items: center;
}

.lessons-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.lessons-count {
  font-size: 26rpx;
  font-weight: 600;
}

.lessons-count.active {
  color: #007aff;
}

.lessons-count.empty {
  color: #ff3b30;
}

/* 箭头 */
.arrow-icon {
  color: #999;
  font-size: 28rpx;
}

/* 加载更多提示 */
.load-more-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
}

.load-more-item {
  display: flex;
  align-items: center;
  justify-content: center;
}

.load-more-text {
  font-size: 28rpx;
  color: #999;
}

/* 没有更多数据提示 */
.no-more-container {
  display: flex;
  justify-content: center;
  padding: 40rpx 0;
  border-top: 1rpx solid #f0f0f0;
  margin-top: 20rpx;
}

.no-more-text {
  font-size: 26rpx;
  color: #c7c7cc;
}

/* 添加学员按钮 */
.add-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.add-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-button::after {
  border: none;
}

.add-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.phoneInput{
  background: #f8f9fa;
  width: 100%;
  height: 100rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
}
 