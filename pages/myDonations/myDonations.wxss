/**
 * pages/myDonations/myDonations.wxss
 * 我的赞助记录页面样式
 */
@import '/style/iconfont.wxss';

.my-donations-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 32rpx;
}

/* 统计卡片 */
.stats-card {
  background-color: #007aff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.stats-item {
  text-align: center;
  color: #ffffff;
}

.stats-label {
  display: block;
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 16rpx;
}

.stats-value {
  font-size: 72rpx;
  font-weight: 600;
}

.stats-unit {
  font-size: 28rpx;
  margin-left: 8rpx;
  opacity: 0.9;
}

/* 列表 */
.donation-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.donation-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.donation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.donation-status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.status-1 {
  background-color: #e8f5e9;
  color: #2e7d32;
}

.status-0 {
  background-color: #fff3e0;
  color: #e65100;
}

.status-2,
.status-3 {
  background-color: #f5f5f5;
  color: #757575;
}

.donation-time {
  font-size: 24rpx;
  color: #86868b;
}

.donation-content {
  display: flex;
  align-items: center;
  gap: 32rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #e5e5ea;
}

.donation-amount {
  display: flex;
  align-items: baseline;
}

.amount-symbol {
  font-size: 32rpx;
  color: #007aff;
  font-weight: 600;
}

.amount-value {
  font-size: 48rpx;
  color: #007aff;
  font-weight: 600;
}

.donation-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.donation-label {
  font-size: 24rpx;
  color: #86868b;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.donation-label .iconfont {
  font-size: 22rpx;
}

.donation-message {
  font-size: 28rpx;
  color: #1d1d1f;
  line-height: 1.6;
}

.donation-footer {
  margin-top: 24rpx;
}

.paid-time {
  font-size: 24rpx;
  color: #86868b;
}

/* 加载状态 */
.loading-more,
.no-more {
  text-align: center;
  padding: 40rpx 0;
}

.loading-text,
.no-more-text {
  font-size: 28rpx;
  color: #86868b;
}

