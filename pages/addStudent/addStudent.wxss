/**
 * pages/addStudent/addStudent.wxss
 * 添加学员页面样式
 */

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 160rpx;
}

/* 表单容器 */
.form-container {
  display: flex;
  flex-direction: column;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: block;
}

/* 输入框 */
.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: none;
}

.form-input::placeholder {
  color: #999;
}

/* 文本域 */
.form-textarea {
  width: 100%;
  min-height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: none;
}

.form-textarea::placeholder {
  color: #999;
}

/* 提交按钮 */
.submit-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.submit-button {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-button.active {
  background-color: #333;
  color: #fff;
}

.submit-button.disabled {
  background-color: #e9ecef;
  color: #999;
}

.submit-button::after {
  border: none;
} 