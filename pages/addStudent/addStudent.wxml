<!--pages/addStudent/addStudent.wxml-->
<navBar title="添加学员" />
<layout class="container">
  <!-- 表单 -->
  <view class="form-container">
    <!-- 手机号 -->
    <view class="form-section">
      <text class="section-title">手机号 *</text>
      <input class="form-input" 
             type="number" 
             placeholder="请输入学员手机号" 
             value="{{phone}}" 
             bindinput="onPhoneInput"
             maxlength="11"></input>
    </view>

    <!-- 课时数 -->
    <view class="form-section">
      <text class="section-title">课时数 *</text>
      <input class="form-input" 
             type="number" 
             placeholder="请输入课时数" 
             value="{{lessons}}" 
             bindinput="onLessonsInput"></input>
    </view>

    <!-- 备注 -->
    <view class="form-section">
      <text class="section-title">备注</text>
      <textarea class="form-textarea" 
                placeholder="请输入备注信息（可选）" 
                value="{{remark}}" 
                bindinput="onRemarkInput"
                maxlength="200"></textarea>
    </view>
  </view>

  <!-- 提交按钮 -->
  <view class="submit-button-container">
    <button class="submit-button {{canSubmit ? 'active' : 'disabled'}}" 
            bindtap="onSubmitAdd" 
            disabled="{{!canSubmit}}">
      确认添加
    </button>
  </view>
</layout> 