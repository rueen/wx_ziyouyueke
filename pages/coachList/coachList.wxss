/**
 * pages/coachList/coachList.wxss
 * 教练列表页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 教练列表 */
.coach-list {
  display: flex;
  flex-direction: column;
}

.coach-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

.coach-item:active {
  background-color: #f8f9fa;
}

/* 教练头像 */
.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 教练信息 */
.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coach-main-info {
  margin-bottom: 12rpx;
}

.coach-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
}

.coach-specialty {
  font-size: 28rpx;
  color: #666;
}

.remaining-lessons {
  display: flex;
  align-items: center;
}

.lessons-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.lessons-count {
  font-size: 26rpx;
  font-weight: 600;
}

.lessons-count.active {
  color: #007aff;
}

.lessons-count.empty {
  color: #ff3b30;
}

/* 箭头 */
.arrow-icon {
  color: #999;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #ccc;
} 