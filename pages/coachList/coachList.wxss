/**
 * pages/coachList/coachList.wxss
 * 教练列表页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 教练列表 */
.coach-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin: 16rpx;
}

.coach-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  transition: transform 0.2s ease;
}

.coach-item:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 教练头像 */
.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 教练信息 */
.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coach-main-info {
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}
.status-badge{
  margin-left: 8rpx;
  padding: 3rpx 6rpx;
}
.remaining-lessons {
  display: flex;
  align-items: center;
}

.lessons-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.lessons-count {
  font-size: 26rpx;
  font-weight: 600;
}

.lessons-count.active {
  color: #007aff;
}

.lessons-count.empty {
  color: #ff3b30;
}

/* 箭头 */
.arrow-icon {
  color: #999;
  font-size: 28rpx;
}

