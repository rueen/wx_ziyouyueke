/**
 * pages/coachList/coachList.wxss
 * 教练列表页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
}

/* 教练列表 */
.coach-list {
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.coach-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.coach-item:last-child {
  border-bottom: none;
}

.coach-item:active {
  background-color: #f9f9f9;
}

/* 教练头像 */
.coach-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

/* 教练信息 */
.coach-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.coach-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.coach-specialty {
  font-size: 28rpx;
  color: #666;
}

/* 箭头 */
.arrow-icon {
  font-size: 24rpx;
  color: #ccc;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
} 