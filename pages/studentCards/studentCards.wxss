/* pages/studentCards/studentCards.wxss */
@import '/style/iconfont.wxss';

.student-cards-container {
  min-height: 100vh;
  background: #f8f9fa;
  padding: 32rpx;
  padding-bottom: 200rpx;
}

/* 卡片列表 */
.card-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-item {
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
}

/* 卡片内容 */
.card-content {
  padding: 32rpx;
  color: #ffffff;
  position: relative;
}

.card-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.card-name {
  font-size: 40rpx;
  font-weight: 600;
}

.card-status {
  padding: 8rpx 16rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 24rpx;
  font-size: 24rpx;
}

.card-status.expired {
  background: rgba(255, 59, 48, 0.3);
}

.card-body {
  margin-bottom: 24rpx;
}

.card-lessons {
  font-size: 32rpx;
  margin-bottom: 12rpx;
}

.card-used {
  font-size: 28rpx;
  opacity: 0.9;
}

.card-footer {
  padding-top: 16rpx;
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.expire-date {
  font-size: 26rpx;
  opacity: 0.8;
}

/* 操作按钮 */
.card-actions {
  display: flex;
  border-top: 1rpx solid #f2f2f7;
}

.action-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  font-size: 28rpx;
  color: #007aff;
  gap: 8rpx;
}

.action-btn.warning {
  color: #ff9500;
}

.action-btn.danger {
  color: #ff3b30;
}

.action-btn:not(:last-child) {
  border-right: 1rpx solid #f2f2f7;
}

.action-btn .iconfont {
  font-size: 32rpx;
}

/* 添加按钮 */
.add-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.add-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add-button::after {
  border: none;
}

.add-button:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  padding: 32rpx;
}

.modal-content {
  width: 100%;
  max-height: 80vh;
  background: #ffffff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
  border-bottom: 1rpx solid #f2f2f7;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.modal-header .iconfont {
  font-size: 40rpx;
  color: #86868b;
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 32rpx;
}

/* 模板列表 */
.template-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.template-item {
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
  border: 3rpx solid transparent;
}

.template-item.active {
  border-color: #007aff;
}

.template-preview {
  padding: 32rpx;
  color: #ffffff;
}

.template-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.template-info {
  font-size: 28rpx;
  opacity: 0.9;
  margin-bottom: 16rpx;
}

.divider {
  margin: 0 12rpx;
}

.template-desc {
  font-size: 26rpx;
  opacity: 0.8;
  line-height: 1.5;
}

.selected-icon {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 48rpx;
  height: 48rpx;
  background: #007aff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.selected-icon .iconfont {
  font-size: 24rpx;
  color: #ffffff;
}

/* 弹窗底部 */
.modal-footer {
  display: flex;
  gap: 24rpx;
  padding: 32rpx;
  border-top: 1rpx solid #f2f2f7;
}

.btn {
  flex: 1;
  padding: 28rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

.btn-cancel {
  background: #f2f2f7;
  color: #1d1d1f;
}

.btn-primary {
  background: #007aff;
  color: #ffffff;
}
