/* pages/groupCourses/groupCourses.wxss */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background: url(https://ziyouyueke.oss-cn-hangzhou.aliyuncs.com/images/groupCourses-bg9.png) no-repeat;
  background-size: 100% auto;
  background-position: left top;
  backdrop-filter: blur(20px);
}

.user-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx
}
.user-info{
  height: 180rpx;
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.username {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}

.user-desc {
  font-size: 28rpx;
  color: #fff;
}
.share-btn{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #cff632
}

.container{
  background-color: #f5f5f5;
  min-height: calc(100vh - 180rpx);
  border-radius: 32rpx 32rpx 0 0;
}

/* 筛选标签 */
.tabs {
  display: flex;
}

.tab-item {
  flex: 1;
  position: relative;
  height: 100rpx;
  display: flex;
}
.tab-item-text{
  font-size: 32rpx;
  font-weight: 600;
  color: #85878f;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}
.active .tab-item-text{
  color: #000;
}
.tab-item .iconfont{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 70rpx;
  opacity: 0;
  line-height: 40rpx;
}
.tab-item.active .iconfont {
  color: #cff632;
  opacity: 1;
}

/* 课程列表容器 */
.courses-container {
  padding: 24rpx 16rpx 200rpx 16rpx;
}

/* 课程卡片 */
.course-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  position: relative;
  transition: all 0.3s ease;
}
.course-card-wrap{
  padding: 24rpx;
  display: flex;
  gap: 20rpx;
}

.course-card-wrap:active {
  transform: scale(0.98);
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  z-index: 10;
}

.status-tag.status_0 {
  background-color: #ff9500;
  color: #fff;
}
.status-tag.status_1 {
  background-color: #cff632;
  color: #000;
}
.status-tag.status_2 {
  background-color: #86868b;
  color: white;
}

/* 课程图片 */
.course-image {
  width: 260rpx;
  height: 220rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.course-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 课程信息 */
.course-info {
  flex: 1;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #50525a;
}

.meta-item .icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.meta-item .text {
  flex: 1;
}

/* 价格 */
.price {
  font-size: 32rpx;
  color: #ff6b35;
}

.course-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 30rpx 30rpx;
}
.cancel_reason{
  font-size: 28rpx;
  color: #666;
  padding: 0 30rpx 30rpx 30rpx;
}
/* 参与者信息 */
.participants {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.participants .avatar-list{
  display: flex;
  align-items: center;
}
.participants .avatar-list .avatar{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border: 1rpx solid #fff;
}
.participant-count {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.action-btn {
  width: 158rpx!important;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-weight: normal;
  padding: 0;
}
.action-btn:active {
  transform: scale(0.98);
}
.action-btn.registration {
  background-color: #cff632;
  color: #000;
}
.action-btn.cancel {
  background-color: #f2f2f7;
  color: #333;
}

/* 新增团课按钮 */
.add-course-btn-container{
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
}
.add-course-btn {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}
.add-course-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 取消团课模态框样式 */
.cancel-modal-content {
  padding: 32rpx;
}

.cancel-reason-section {
  margin-bottom: 32rpx;
}

.cancel-reason-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 2rpx solid #e5e5ea;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1d1d1f;
  background-color: #fff;
  box-sizing: border-box;
}

.cancel-reason-input:focus {
  border-color: #007aff;
}

.cancel-modal-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.cancel-btn,
.confirm-btn {
  width: 160rpx;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background-color: #f2f2f7;
  color: #1d1d1f;
}

.confirm-btn {
  background-color: #ff9500;
  color: #fff;
}

.cancel-btn:active,
.confirm-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}