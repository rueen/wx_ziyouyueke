/* pages/groupCourses/groupCourses.wxss */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #cdcff8;
}

.user-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx
}
.user-info{
  height: 200rpx;
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.username {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-right: 16rpx;
}

.user-desc {
  font-size: 28rpx;
  color: #999;
}

.container{
  background-color: #f5f5f5;
  height: calc(100vh - 200rpx);
  border-radius: 32rpx 32rpx 0 0;
}

/* 筛选标签 */
.tabs {
  display: flex;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 32rpx;
  color: #000;
  position: relative;
  transition: all 0.3s ease;
  height: 100rpx;
  line-height: 100rpx;
}

.tab-item.active {
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 6rpx;
  background-color: #fae64f;
  border-radius: 2rpx;
}

/* 课程列表容器 */
.courses-container {
  padding: 24rpx 16rpx 200rpx 16rpx;
}

/* 课程卡片 */
.course-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
  transition: all 0.3s ease;
}
.course-card-wrap{
  padding: 24rpx;
  display: flex;
  gap: 20rpx;
}

.course-card-wrap:active {
  transform: scale(0.98);
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  z-index: 10;
}

.status-tag.status_0 {
  background-color: #fa541c;
  color: #fff;
}
.status-tag.status_1 {
  background-color: #fae64f;
  color: #000;
}
.status-tag.status_2 {
  background-color: #86868b;
  color: white;
}

/* 课程图片 */
.course-image {
  width: 260rpx;
  height: 220rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.course-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 课程信息 */
.course-info {
  flex: 1;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1d1d1f;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #86868b;
}

.meta-item .icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.meta-item .text {
  flex: 1;
}

/* 价格 */
.price {
  font-size: 32rpx;
  color: #ff6b35;
}

.course-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 30rpx 30rpx;
}
/* 参与者信息 */
.participants {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.participants .avatar-list{
  display: flex;
  align-items: center;
}
.participants .avatar-list .avatar{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border: 1rpx solid #fff;
}
.participant-count {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.action-btn {
  width: 158rpx!important;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-weight: normal;
  padding: 0;
}
.action-btn:active {
  transform: scale(0.98);
}
.action-btn.registration {
  background-color: #fae64f;
  color: #000;
}
.action-btn.cancel {
  background-color: #f2f2f7;
  color: #333;
}

/* 新增团课按钮 */
.add-course-btn-container{
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
}
.add-course-btn {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}
.add-course-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}