/* pages/groupCourses/groupCourses.wxss */
@import '/style/iconfont.wxss';
@import '/style/groupCourse.wxss';

page {
  height: 100vh;
  background: url(https://ziyouyueke.oss-cn-hangzhou.aliyuncs.com/images/groupCourses-bg9.png) no-repeat;
  background-size: 100% auto;
  background-position: left top;
  backdrop-filter: blur(20px);
}

.user-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx
}
.user-info{
  height: 180rpx;
  display: flex;
  align-items: center;
  flex: 1;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.user-details {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.username-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.username {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
}

.user-desc {
  font-size: 28rpx;
  color: #fff;
}
.share-btn{
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #cff632
}

.container{
  background-color: #f5f5f5;
  min-height: calc(100vh - 180rpx);
  border-radius: 32rpx 32rpx 0 0;
}

/* 筛选标签 */
.tabs {
  display: flex;
}

.tab-item {
  flex: 1;
  position: relative;
  height: 100rpx;
  display: flex;
}
.tab-item-text{
  font-size: 32rpx;
  font-weight: 600;
  color: #85878f;
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  z-index: 2;
}
.active .tab-item-text{
  color: #000;
}
.tab-item .iconfont{
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  font-size: 70rpx;
  opacity: 0;
  line-height: 40rpx;
}
.tab-item.active .iconfont {
  color: #cff632;
  opacity: 1;
}

/* 新增活动按钮 */
.add-course-btn-container{
  position: fixed;
  bottom: 100rpx;
  left: 0;
  right: 0;
}
.add-course-btn {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: transform 0.2s ease;
}
.add-course-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-text {
  color: white;
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 取消活动模态框样式 */
.cancel-modal-content {
  padding: 32rpx;
}

.cancel-reason-section {
  margin-bottom: 32rpx;
}

.cancel-reason-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  border: 2rpx solid #e5e5ea;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #1d1d1f;
  background-color: #fff;
  box-sizing: border-box;
}

.cancel-reason-input:focus {
  border-color: #007aff;
}

.cancel-modal-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
}

.cancel-btn,
.confirm-btn {
  width: 160rpx;
  height: 72rpx;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background-color: #f2f2f7;
  color: #1d1d1f;
}

.confirm-btn {
  background-color: #ff9500;
  color: #fff;
}

.cancel-btn:active,
.confirm-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}