/**
 * pages/studentDetail/studentDetail.wxss
 * 学员详情页面样式
 */

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 140rpx;
}

/* 学员基础信息 */
.student-header {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

.student-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 32rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.student-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.remaining-lessons {
  display: flex;
  align-items: center;
}

.lessons-label {
  font-size: 26rpx;
  color: #999;
  margin-right: 8rpx;
}

.lessons-count {
  font-size: 26rpx;
  font-weight: 600;
}

.lessons-count.active {
  color: #007aff;
}

.lessons-count.empty {
  color: #ff3b30;
}

/* 信息区块 */
.edit-section,
.remark-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: block;
}

/* 可编辑项 */
.edit-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.edit-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
}

.edit-value-container {
  display: flex;
  align-items: center;
}

.edit-input {
  width: 120rpx;
  height: 60rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #333;
  text-align: center;
  border: 1rpx solid #e9ecef;
}

.edit-input:focus {
  border-color: #007aff;
  background-color: #fff;
}

.edit-unit {
  font-size: 26rpx;
  color: #666;
  margin-left: 8rpx;
}

/* 备注输入框 */
.remark-textarea {
  width: 100%;
  min-height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1rpx solid #e9ecef;
  line-height: 1.5;
}

.remark-textarea:focus {
  border-color: #007aff;
  background-color: #fff;
}

.remark-textarea::placeholder {
  color: #999;
}

/* 约课按钮 */
.book-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.book-button {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.book-button:active {
  background-color: #555;
}

.book-button::after {
  border: none;
}