/**
 * pages/donation/donation.wxss
 * 友情赞助页面样式
 */
@import '/style/iconfont.wxss';

.donation-page {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 16rpx;
  padding-bottom: calc(150rpx + env(safe-area-inset-bottom));
}

/* 头部区域 */
.header-section {
  text-align: center;
  padding: 40rpx 0;
}

.header-title {
  display: block;
  font-size: 48rpx;
  font-weight: 600;
  color: #1d1d1f;
  margin-bottom: 16rpx;
}

.header-desc {
  display: block;
  font-size: 28rpx;
  color: #86868b;
}

/* 金额选择区域 */
.amount-section {
  margin-bottom: 16rpx;
}

.section-title {
  display: block;
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
  margin-bottom: 24rpx;
}

.fixed-amounts {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.amount-card {
  width: calc(50% - 8rpx);
  height: 260rpx;
  background-color: #ffffff;
  border: 4rpx solid #fff;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.amount-card-selected {
  border-color: #A67C52;
}

.amount-icon {
  font-size: 60rpx;
  margin-bottom: 16rpx;
  position: relative;
}
.amount-icon::before{
  position: relative;
  z-index: 2;
}
.amount-icon::after{
  display: block;
  content: '';
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  position: absolute;
  z-index: 1;
  top: 50%; left: 50%;
  margin-left: -20rpx;
  margin-top: -20rpx;
  background-color: #e2ff6f;
}

.amount-name {
  font-size: 28rpx;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.amount-price {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 自定义金额 */
.custom-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.custom-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.custom-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d1d1f;
}

.custom-header .iconfont {
  font-size: 28rpx;
  color: #86868b;
}

.custom-input-wrapper {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.currency-symbol {
  font-size: 40rpx;
  font-weight: 600;
  color: #007aff;
  margin-right: 16rpx;
}

.custom-input {
  flex: 1;
  font-size: 40rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.input-hint {
  font-size: 28rpx;
  color: #86868b;
  margin-left: 16rpx;
}

/* 留言区域 */
.message-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.message-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  color: #1d1d1f;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-top: 24rpx;
  box-sizing: border-box;
}

.message-count {
  display: block;
  text-align: right;
  font-size: 24rpx;
  color: #86868b;
  margin-top: 16rpx;
}

/* 匿名选项 */
.anonymous-section {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
}

.anonymous-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.anonymous-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.anonymous-title {
  font-size: 32rpx;
  color: #1d1d1f;
  margin-bottom: 8rpx;
}

.anonymous-desc {
  font-size: 24rpx;
  color: #86868b;
}

/* 底部说明 */
.footer-section {
  text-align: center;
  padding: 32rpx 0;
}

.footer-text {
  display: block;
  font-size: 24rpx;
  color: #86868b;
  line-height: 1.8;
}

/* 提交按钮 */
.submit-section {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background-color: #333;
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn::after {
  border: none;
}
.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.submit-btn-disabled {
  opacity: 0.5;
}

/* 快捷入口 */
.quick-links {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
}

.quick-link {
  flex: 1;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.quick-link .iconfont {
  font-size: 48rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.quick-link-text {
  font-size: 24rpx;
  color: #1d1d1f;
}

