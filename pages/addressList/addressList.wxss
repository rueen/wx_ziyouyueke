/**
 * pages/addressList/addressList.wxss
 * 常用地址列表页面样式
 */

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 180rpx;
}

/* 地址列表 */
.address-list {
  margin-bottom: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
  transition: all 0.2s ease;
  border: 1rpx solid rgba(0, 0, 0, 0.02);
}

.address-item:active {
  transform: translateY(1rpx);
  box-shadow: 0 1rpx 12rpx rgba(0, 0, 0, 0.08);
}

.address-content {
  padding: 24rpx 24rpx 20rpx 24rpx;
}

.address-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.address-name-row {
  display: flex;
  align-items: center;
  flex: 1;
  margin-right: 16rpx;
}

.address-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-right: 12rpx;
  max-width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.default-tag {
  background-color: #007aff;
  color: #fff;
  padding: 2rpx 8rpx;
  border-radius: 8rpx;
  font-size: 18rpx;
  line-height: 1.2;
  flex-shrink: 0;
}

.default-text {
  font-size: 18rpx;
  color: #fff;
}

.address-actions {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
}

.action-btn {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
  line-height: 1.2;
  border: none;
  min-width: 64rpx;
  text-align: center;
}

.action-btn::after {
  border: none;
}

.set-default-btn {
  background-color: rgba(0, 122, 255, 0.1);
  color: #007aff;
  border: 1rpx solid rgba(0, 122, 255, 0.3);
}

.set-default-btn:active {
  background-color: rgba(0, 122, 255, 0.15);
}

.delete-btn {
  background-color: rgba(255, 59, 48, 0.1);
  color: #ff3b30;
  border: 1rpx solid rgba(255, 59, 48, 0.3);
}

.delete-btn:active {
  background-color: rgba(255, 59, 48, 0.15);
}

.address-detail {
  margin-top: 8rpx;
}

.address-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.empty-icon .iconfont {
  font-size: 60rpx;
  color: #ccc;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.4;
}

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 新增地址按钮 */
.add-button-container {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 48rpx);
  max-width: 600rpx;
  z-index: 999;
}

.add-button {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 24rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  box-shadow: 0 6rpx 24rpx rgba(102, 126, 234, 0.25);
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
}

.add-button:active {
  transform: translateY(1rpx);
  box-shadow: 0 4rpx 20rpx rgba(102, 126, 234, 0.2);
}

.add-button::after {
  border: none;
}

.add-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.6s ease;
}

.add-button:active::before {
  left: 100%;
}

.add-button .iconfont {
  font-size: 28rpx;
}

.add-text {
  font-size: 30rpx;
  font-weight: 600;
} 