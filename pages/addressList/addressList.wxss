/**
 * pages/addressList/addressList.wxss
 * 常用地址列表页面样式
 */

page {
  height: 100vh;
  background-color: #f5f5f5;
}

/* 地址列表 */
.address-list {
  margin-bottom: 20rpx;
}

.address-item {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  padding: 24rpx;
}

.address-item:active {
  background-color: #f9f9f9;
}

.address-content {
  flex: 1;
}

.address-header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.address-name-row {
  display: flex;
  align-items: center;
  flex: 1;
}

.address-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-right: 12rpx;
  max-width: 600rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.default-tag {
  background-color: #007aff;
  color: #fff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 18rpx;
  line-height: 1.2;
  flex-shrink: 0;
}

.default-text {
  font-size: 18rpx;
  color: #fff;
}

.address-detail {
  margin-top: 8rpx;
}

.address-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  word-break: break-all;
}

/* 右箭头 */
.address-arrow {
  font-size: 32rpx;
  color: #ccc;
  margin-left: 16rpx;
  flex-shrink: 0;
}

/* 空状态样式已移至通用组件 */

/* 加载状态 */
.loading-state {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 新增地址按钮 */
.add-button-container {
  position: fixed;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  width: calc(100% - 48rpx);
  max-width: 600rpx;
  z-index: 999;
}

.add-button {
  width: 100%;
  height: 96rpx;
  background: #333;
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
}

.add-button:active {
  transform: translateY(2rpx);
  background: #222;
}

.add-button::after {
  border: none;
}

.add-button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
  transition: left 0.6s ease;
}

.add-button:active::before {
  left: 100%;
}

.add-button .iconfont {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.add-text {
  font-size: 30rpx;
  font-weight: 600;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .container {
    padding: 16rpx;
  }
  
  .address-item {
    padding: 20rpx;
  }
  
  .address-name {
    font-size: 28rpx;
  }
  
  .address-text {
    font-size: 24rpx;
  }
} 