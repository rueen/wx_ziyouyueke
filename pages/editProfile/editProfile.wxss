/**
 * pages/editProfile/editProfile.wxss
 * 编辑个人资料页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f7f7f7;
  padding: 40rpx 40rpx 140rpx 40rpx; /* 底部留更多空间给保存按钮 */
}

/* 表单容器 */
.profile-form {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 20rpx 30rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  transition: background-color 0.2s ease;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item:active {
  background-color: #f8f8f8;
}

/* 头像按钮特殊样式 */
.avatar-button {
  margin-left: 0!important;
  margin-right: 0!important;
  padding: 32rpx 0;
  border-radius: 0;
  width: 100%!important;
  background-color: transparent;
  font-weight: normal;
  color: inherit;
  line-height: inherit;
}

.avatar-button::after {
  border: none;
}

/* 手机号按钮特殊样式 */
.phone-item {
  margin-left: 0!important;
  margin-right: 0!important;
  padding: 30rpx 0;
  border-radius: 0;
  width: 100%!important;
  background-color: transparent;
  font-weight: normal;
}

/* 标签 */
.label {
  font-size: 32rpx;
  color: #333;
  font-weight: normal;
}

/* 值容器 */
.value-container {
  display: flex;
  align-items: center;
}

/* 值文本 */
.value {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

/* 头像 */
.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 箭头 */
.arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 输入框样式 */
.input-value {
  font-size: 32rpx;
  color: #333;
  text-align: right;
  flex: 1;
  padding: 0;
  margin: 0;
  background: transparent;
}

.input-value::placeholder {
  color: #999;
}

/* 个人介绍项目特殊样式 */
.intro-item {
  flex-direction: column;
  align-items: flex-start;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.intro-item .label {
  margin-bottom: 20rpx;
  align-self: flex-start;
}

.intro-item .value-container {
  width: 100%;
}

/* 个人介绍文本域 */
.intro-textarea {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  min-height: 140rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  line-height: 1.6;
  font-family: inherit;
}

.intro-textarea::placeholder {
  color: #999;
}

/* 保存按钮容器 */
.save-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 40rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  background-color: #f7f7f7;
  border-top: 1rpx solid #e0e0e0;
}

/* 保存按钮 */
.save-btn {
  flex: 1;
  height: 96rpx;
  background-color: #007aff;
  color: #fff;
  font-size: 30rpx;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.4);
}



.coming-soon {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.coming-text {
  font-size: 28rpx;
  color: #999;
} 