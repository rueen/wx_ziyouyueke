/**
 * pages/editProfile/editProfile.wxss
 * 编辑个人资料页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f7f7f7;
  padding: 40rpx;
}

/* 表单容器 */
.profile-form {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 10rpx 30rpx;
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #ededed;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
}

.form-item:last-child {
  border-bottom: none;
}

/* 手机号按钮特殊样式 */
.phone-item {
  margin-left: 0!important;
  margin-right: 0!important;
  padding: 30rpx 0;
  border-radius: 0;
  width: 100%!important;
  background-color: transparent;
  font-weight: normal;
}

/* 标签 */
.label {
  font-size: 32rpx;
  color: #333;
  font-weight: normal;
}

/* 值容器 */
.value-container {
  display: flex;
  align-items: center;
}

/* 值文本 */
.value {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

/* 头像 */
.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 箭头 */
.arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 性别选择弹窗 */
.gender-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.modal-content {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗头部 */
.modal-header {
  padding: 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

/* 性别选项 */
.gender-options {
  padding: 20rpx 0 60rpx 0;
}

.gender-option {
  padding: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.gender-option:last-child {
  border-bottom: none;
}

.gender-option.selected {
  color: #007aff;
  background-color: #f0f9ff;
}

.gender-option:active {
  background-color: #f5f5f5;
}

.coming-soon {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.coming-text {
  font-size: 28rpx;
  color: #999;
} 