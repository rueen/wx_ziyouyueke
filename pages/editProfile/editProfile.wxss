/**
 * pages/editProfile/editProfile.wxss
 * 编辑个人资料页面样式
 */
@import '/style/iconfont.wxss';

page {
  height: 100vh;
  background-color: #f7f7f7;
  padding: 40rpx 40rpx 140rpx 40rpx; /* 底部留更多空间给保存按钮 */
}

/* 表单容器 */
.profile-form {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 表单项 */
.form-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  transition: background-color 0.2s ease;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item:active {
  background-color: #f8f8f8;
}

/* 手机号按钮特殊样式 */
.phone-item {
  margin-left: 0!important;
  margin-right: 0!important;
  padding: 30rpx 0;
  border-radius: 0;
  width: 100%!important;
  background-color: transparent;
  font-weight: normal;
}

/* 标签 */
.label {
  font-size: 32rpx;
  color: #333;
  font-weight: normal;
}

/* 值容器 */
.value-container {
  display: flex;
  align-items: center;
}

/* 值文本 */
.value {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

/* 头像 */
.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

/* 箭头 */
.arrow {
  font-size: 24rpx;
  color: #ccc;
}

/* 输入框样式 */
.input-value {
  font-size: 32rpx;
  color: #333;
  text-align: right;
  flex: 1;
  padding: 0;
  margin: 0;
  background: transparent;
}

.input-value::placeholder {
  color: #999;
}

/* 个人介绍项目特殊样式 */
.intro-item {
  flex-direction: column;
  align-items: flex-start;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}

.intro-item .label {
  margin-bottom: 20rpx;
  align-self: flex-start;
}

.intro-item .value-container {
  width: 100%;
}

/* 个人介绍文本域 */
.intro-textarea {
  font-size: 32rpx;
  color: #333;
  width: 100%;
  min-height: 140rpx;
  padding: 16rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: #fafafa;
  box-sizing: border-box;
  line-height: 1.6;
  font-family: inherit;
}

.intro-textarea::placeholder {
  color: #999;
}

/* 保存按钮容器 */
.save-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 30rpx 40rpx;
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
  background-color: #f7f7f7;
  border-top: 1rpx solid #e0e0e0;
}

/* 保存按钮 */
.save-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
  color: #fff;
  font-size: 34rpx;
  font-weight: 600;
  border: none;
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 122, 255, 0.3);
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(0, 122, 255, 0.4);
}

/* 性别选择弹窗 */
.gender-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: flex-end;
  justify-content: center;
}

.modal-content {
  width: 100%;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  animation: slideUp 0.3s ease-out;
}

@keyframes slideUp {
  from {
    transform: translateY(100%);
  }
  to {
    transform: translateY(0);
  }
}

/* 弹窗头部 */
.modal-header {
  padding: 40rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

/* 性别选项 */
.gender-options {
  padding: 20rpx 0 60rpx 0;
}

.gender-option {
  padding: 40rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border-bottom: 1rpx solid #f0f0f0;
}

.gender-option:last-child {
  border-bottom: none;
}

.gender-option.selected {
  color: #007aff;
  background-color: #f0f9ff;
}

.gender-option:active {
  background-color: #f5f5f5;
}

.coming-soon {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.coming-text {
  font-size: 28rpx;
  color: #999;
} 