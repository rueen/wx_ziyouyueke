/**
 * pages/bookStudent/bookStudent.wxss
 * 约学员页面样式
 */

page {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 20rpx;
  padding-bottom: 160rpx;
}

/* 表单区块 */
.form-section {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 24rpx;
  display: block;
}

/* 学员选择列表 */
.student-list {
  display: flex;
  flex-direction: column;
}

.student-option {
  display: flex;
  align-items: center;
  padding: 24rpx;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid transparent;
  background-color: #f8f9fa;
  position: relative;
}

.student-option:last-child {
  margin-bottom: 0;
}

.student-option.selected {
  border-color: #007aff;
  background-color: #f0f9ff;
}

.student-option:active {
  background-color: #e9ecef;
}

.student-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.avatar-img {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.student-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.student-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.student-level {
  font-size: 28rpx;
  color: #666;
}

.check-icon {
  font-size: 32rpx;
  color: #007aff;
  font-weight: bold;
}

/* 已选学员显示 */
.selected-student {
  display: flex;
  align-items: center;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  padding: 24rpx;
}

.change-btn {
  font-size: 28rpx;
  color: #007aff;
  padding: 12rpx 24rpx;
  border: 1rpx solid #007aff;
  border-radius: 20rpx;
}

/* 时间选择 */
.time-options {
  display: flex;
  flex-direction: column;
}

.time-option {
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  background-color: #f8f9fa;
  border: 2rpx solid transparent;
  text-align: center;
}

.time-option:last-child {
  margin-bottom: 0;
}

.time-option.selected {
  border-color: #007aff;
  background-color: #f0f9ff;
}

.time-option:active {
  background-color: #e9ecef;
}

.time-text {
  font-size: 28rpx;
  color: #333;
}

/* 输入框 */
.location-input,
.remark-input {
  width: 100%;
  min-height: 120rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: none;
}

.location-input {
  min-height: 80rpx;
}

.remark-input {
  min-height: 120rpx;
}

/* 确认信息 */
.confirm-info {
  background-color: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
}

/* 提交按钮 */
.submit-button-container {
  position: fixed;
  bottom: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 600rpx;
}

.submit-button {
  width: 100%;
  height: 96rpx;
  font-size: 32rpx;
  font-weight: 600;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-button.active {
  background-color: #333;
  color: #fff;
}

.submit-button.disabled {
  background-color: #e9ecef;
  color: #999;
}

.submit-button::after {
  border: none;
}