/* components/poster/template1/template1.wxss */
.poster-template1-container{
  position: relative;
}
.poster_image{
  width: 100%;
  height: 100%;
}
.intro{
  position: absolute;
  max-width: 100%;
}
.intro .title{
  display: flex;
  align-items: center;
}
.intro .title-icon{
  border: 1rpx solid #cff632;
}
.intro .title-text{
  color: #cff632;
  font-weight: 600;
}
.intro .content{
  color: #fff;
  display: flex;
  flex-direction: column;
  font-weight: 400;
}
.intro .content-line{
  display: block;
  line-height: 1.6;
}
.name-wrap{
  position: absolute;
  background: #cff632;
  display: flex;
  align-items: center;
  color: #000;
  padding-left: 30rpx;
}
.nickname{
  font-weight: 500;
}
.qrcode{
  position: absolute;
  border-radius: 50%;
  background: #fff;
  overflow: hidden;
  padding: 10rpx;
  box-sizing: border-box;
}
.qrcode-image{
  width: 100%;
  height: 100%;
}
