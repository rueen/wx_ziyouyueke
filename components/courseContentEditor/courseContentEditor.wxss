/**
 * components/courseContentEditor/courseContentEditor.wxss
 * 课程内容编辑组件样式
 */
@import '/style/iconfont.wxss';

/* 弹窗容器 */
.content-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 9999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.content-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-radius: 20rpx 20rpx 0 0;
  max-height: 80vh;
  overflow-y: auto;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  padding-bottom: 60rpx;
}

.content-modal.show .modal-content {
  transform: translateY(0);
}

.content-modal-content {
  max-height: 90vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.modal-close {
  font-size: 32rpx;
  color: #999;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: 30rpx;
}

.content-modal-body {
  max-height: 60vh;
  overflow-y: auto;
}

/* 表单样式 */
.form-group {
  margin-bottom: 32rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.form-textarea {
  width: 100%;
  min-height: 160rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  background-color: #fafafa;
  box-sizing: border-box;
}

.char-count {
  text-align: right;
  margin-top: 12rpx;  
  font-size: 24rpx;
  color: #999;
}

/* 图片列表 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  position: relative;
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  overflow: hidden;
}

.image-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 32rpx;
  height: 32rpx;
  background-color: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn .iconfont {
  font-size: 20rpx;
  color: #fff;
}

.add-image-btn {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #d1d1d6;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f8f9fa;
  transition: all 0.3s ease;
}

.add-image-btn:active {
  background-color: #e5e5ea;
  border-color: #007aff;
}

.add-icon {
  font-size: 48rpx;
  color: #86868b;
  margin-bottom: 8rpx;
}

.add-text {
  font-size: 24rpx;
  color: #86868b;
}

/* 媒体列表 */
.media-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.media-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  position: relative;
}

.media-icon {
  font-size: 32rpx;
  color: #007aff;
  margin-right: 16rpx;
}

.media-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.media-duration {
  font-size: 24rpx;
  color: #999;
  margin-right: 16rpx;
}

.delete-media {
  font-size: 32rpx;
  color: #ff3b30;
  cursor: pointer;
}

.add-media-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 16rpx;
  background-color: #f8f9fa;
  border: 1rpx dashed #d1d1d6;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #007aff;
  cursor: pointer;
  transition: all 0.3s ease;
}

.add-media-btn:active {
  background-color: #e5e5ea;
  border-color: #007aff;
}

.add-media-btn .iconfont {
  font-size: 32rpx;
}

/* 录音按钮 */
.record-btn-wrapper {
  width: 100%;
}

.record-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  padding: 32rpx;
  background-color: #f8f9fa;
  border: 1rpx solid #e5e5ea;
  border-radius: 12rpx;
  transition: all 0.2s ease;
}

.record-btn:active {
  background-color: #e5e5ea;
  transform: scale(0.98);
}

.record-btn .iconfont {
  font-size: 48rpx;
  color: #07c160;
}

.record-btn text {
  font-size: 28rpx;
  color: #333;
}

/* 录音中容器 */
.recording-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  padding: 32rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.recording-time {
  font-size: 40rpx;
  color: #333;
  font-weight: 500;
  font-family: -apple-system, BlinkMacSystemFont, monospace;
}

/* 声波动画 */
.recording-wave {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 60rpx;
}

.wave-bar {
  width: 6rpx;
  height: 20rpx;
  background-color: #07c160;
  border-radius: 3rpx;
  animation: wave 1.2s ease-in-out infinite;
}

.wave-bar:nth-child(1) {
  animation-delay: 0s;
}

.wave-bar:nth-child(2) {
  animation-delay: 0.1s;
}

.wave-bar:nth-child(3) {
  animation-delay: 0.2s;
}

.wave-bar:nth-child(4) {
  animation-delay: 0.3s;
}

.wave-bar:nth-child(5) {
  animation-delay: 0.4s;
}

@keyframes wave {
  0%, 100% {
    height: 20rpx;
  }
  50% {
    height: 60rpx;
  }
}

/* 录音操作按钮 */
.record-action-btn {
  width: 100%;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.record-action-btn.stop {
  background-color: #07c160;
  color: #fff;
}

.record-action-btn::after {
  border: none;
}

.record-action-btn:active{
  transform: scale(0.98);
  opacity: 0.9;
}

/* 录音预览 */
.record-preview {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
}

.preview-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.preview-icon {
  font-size: 48rpx;
  color: #07c160;
  border-radius: 50%;
}

.preview-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.preview-label {
  font-size: 28rpx;
  color: #333;
}

.preview-duration {
  font-size: 24rpx;
  color: #86868b;
}

.preview-actions {
  display: flex;
  gap: 16rpx;
}

.preview-btn {
  flex: 1;
  padding: 18rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  border: none;
}

.preview-btn::after {
  border: none;
}

.preview-btn:active{
  transform: scale(0.98);
  opacity: 0.9;
}

.preview-btn.cancel {
  background-color: #fff;
  color: #333;
  border: 1rpx solid #e5e5ea;
}

.preview-btn.confirm {
  background-color: #07c160;
  color: #fff;
}

/* 底部按钮 */
.modal-footer {
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  gap: 20rpx;
}

.modal-btn {
  flex: 1;
  height: 72rpx;
  border: none;
  border-radius: 36rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.modal-btn::after {
  border: none;
}

.cancel-modal-btn {
  background-color: #f5f5f5;
  color: #666;
}

.confirm-modal-btn {
  background-color: #007aff;
  color: #fff;
}

.video-item{
  position: relative;
}
.content-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background-color: #000;
  margin-bottom: 16rpx;
}
.video-item .delete-btn{
  background-color: rgba(255, 255, 255, .6);
}
.video-item .delete-btn .iconfont{
  color: #000;
}