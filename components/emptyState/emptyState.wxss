/* components/emptyState/emptyState.wxss */

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 40rpx;
  text-align: center;
  background-color: #fafafa;
  margin: 20rpx 30rpx;
  border-radius: 12rpx;
  border: 1rpx solid #f0f0f0;
  min-height: 200rpx;
}

/* 图标样式 */
.empty-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.empty-icon.small {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.empty-icon.large {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 32rpx;
}

.empty-icon .iconfont {
  font-size: 40rpx;
  color: #ccc;
}

.empty-icon.small .iconfont {
  font-size: 32rpx;
}

.empty-icon.large .iconfont {
  font-size: 48rpx;
}

/* 文字样式 */
.empty-title {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 12rpx;
  font-weight: 500;
  line-height: 1.4;
}

.empty-description {
  font-size: 26rpx;
  color: #ccc;
  line-height: 1.4;
  margin-bottom: 24rpx;
}

/* 按钮样式 */
.empty-button {
  background-color: #007aff;
  color: #fff;
  padding: 16rpx 32rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  font-weight: 500;
  margin-top: 16rpx;
  min-width: 120rpx;
  text-align: center;
}

.empty-button:active {
  background-color: #0056cc;
  transform: scale(0.98);
}

/* 特殊类型的样式定制 */
.empty-state.compact {
  padding: 60rpx 30rpx;
  margin: 10rpx 20rpx;
  min-height: 160rpx;
}

.empty-state.compact .empty-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.empty-state.compact .empty-icon .iconfont {
  font-size: 32rpx;
}

.empty-state.compact .empty-title {
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.empty-state.compact .empty-description {
  font-size: 24rpx;
  margin-bottom: 16rpx;
}

/* 无边框样式 */
.empty-state.borderless {
  background-color: transparent;
  border: none;
  margin: 20rpx 0;
}

/* 居中样式（用于全屏空状态） */
.empty-state.centered {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  margin: 0;
  background-color: transparent;
  border: none;
} 