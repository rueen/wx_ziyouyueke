/* components/timeSelector/timeSelector.wxss */
@import '/style/common.wxss';
@import '/style/iconfont.wxss';

page {
  background-color: #f5f5f5;
}

/* 日期选择器样式 */
.date-selector {
  background-color: #fff;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.date-scroll {
  width: 100%;
}

.date-list {
  display: flex;
  padding: 0 20rpx;
  white-space: nowrap;
}

.date-item {
  flex-shrink: 0;
  width: 120rpx;
  height: 140rpx;
  margin-right: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  transition: all 0.3s ease;
}

.date-item.active {
  background-color: #007aff;
  color: #fff;
}

.date-item.full {
  background-color: #f0f0f0;
  color: #999;
}

.date-item.active.full {
  background-color: #ff6b6b;
  color: #fff;
}

.date-weekday {
  font-size: 24rpx;
  margin-bottom: 8rpx;
}

.date-monthday {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.date-status {
  font-size: 20rpx;
}

.today-indicator {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background-color: #ff4757;
  color: #fff;
  font-size: 18rpx;
  padding: 2rpx 6rpx;
  border-radius: 8rpx;
}

.date-item.active .today-indicator {
  background-color: rgba(255, 255, 255, 0.3);
}

/* 时间段容器样式 */
.time-slots-container {
  flex: 1;
  padding: 20rpx;
}

/* 加载状态样式 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  color: #999;
  font-size: 28rpx;
}

/* 时间段列表样式 */
.time-slots {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.time-slot {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  position: relative;
  transition: all 0.3s ease;
  min-height: 130rpx;
  border-bottom: 1rpx solid #f5f5f5;
  box-sizing: border-box;
}

.time-slot.free::before {
  background-color: #ddd;
}

.time-slot.selectable {
  cursor: pointer;
}
.time-slot.selected .icon-selected{
  color: #007aff;
  font-size: 40rpx;
}

.time-slot-time {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  width: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.quota-statistics{
  font-size: 24rpx;
  font-weight: normal;
  margin-top: 10rpx;
  background-color: #f2f2f2;
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  border-radius: 6rpx;
}

.time-slot-content {
  flex: 1;
  margin-left: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 已预约状态样式 */
.booked-content {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.student-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.student-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.location-info {
  font-size: 24rpx;
  color: #666;
}

.location-info .iconfont{
  font-size: 26rpx;
  margin-right: 10rpx;
}

/* 空闲状态样式 */
.free-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.free-text {
  font-size: 28rpx;
  color: #999;
}

.select-hint {
  font-size: 24rpx;
  color: #007aff;
  background-color: #e6f3ff;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
}

/* 过期时间段样式 */
.time-slot.expired {
  background-color: #f8f9fa;
  opacity: 0.8;
  /* pointer-events: none; */
}

.time-slot.expired .time-slot-time {
  color: #c7c7cc;
}

.time-slot.expired .free-text {
  color: #c7c7cc;
}

.time-slot.expired .select-hint {
  display: none;
}

.time-slot.expired-booked {
  background-color: #f8f9fa;
  opacity: 0.6;
}

.time-slot.expired-booked .time-slot-time {
  color: #c7c7cc;
}

.time-slot.expired-booked .student-name {
  color: #c7c7cc;
}

.time-slot.expired-booked .location-info {
  color: #c7c7cc;
}

.time-slot.expired-booked .booked-text {
  color: #c7c7cc;
}

/* 已取消课程的样式 */
.time-slot.free-with-cancelled {
  background-color: #fff;
  border: 1rpx dashed #e5e5ea;
}

.cancelled-course {
  opacity: 0.7;
}

.cancelled-course .student-name.cancelled {
  color: #8e8e93;
  text-decoration: line-through;
}

.cancelled-course .location-info.cancelled {
  color: #8e8e93;
}

.rebook-hint {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.rebook-hint .select-hint {
  font-size: 22rpx;
  color: #34c759;
  background-color: #e8f5e8;
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
}

/* 名额统计样式 */
.quota-info {
  display: flex;
  align-items: center;
}

.quota-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.remaining-text {
  font-size: 24rpx;
  color: #34c759;
  margin-left: 8rpx;
}

.full-text {
  font-size: 24rpx;
  color: #ff6b6b;
  margin-left: 8rpx;
}

/* 课程列表样式 */
.courses-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.course-item {
  padding: 12rpx;
}

.course-item .student-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.course-item .student-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.course-item .location-info {
  font-size: 22rpx;
  color: #666;
}

.course-item .location-info .iconfont {
  font-size: 24rpx;
  margin-right: 8rpx;
}

/* 无课程提示样式 */
.no-courses {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
}

.no-courses-text {
  font-size: 26rpx;
  color: #999;
}

/* 选择提示容器样式 */
.select-hint-container {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  margin-top: 8rpx;
}

/* 过期和满员状态样式 */
.expired-text {
  font-size: 28rpx;
  color: #c7c7cc;
}

.full-text {
  font-size: 28rpx;
  color: #ff6b6b;
}

/* 简化的已预约状态样式 */
.booked-simple {
  display: flex;
  align-items: center;
}

.booked-text {
  font-size: 28rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .date-item {
    width: 100rpx;
    height: 120rpx;
  }
  
  .date-weekday {
    font-size: 22rpx;
  }
  
  .date-monthday {
    font-size: 26rpx;
  }
  
  .date-status {
    font-size: 18rpx;
  }
  
  .time-slot-time {
    font-size: 30rpx;
    min-width: 180rpx;
  }
  
  .student-name {
    font-size: 26rpx;
  }
  
  .free-text {
    font-size: 26rpx;
  }
} 

.template-status {
  margin: 20rpx;
  padding: 16rpx 20rpx;
  background-color: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 12rpx;
}

.status-text {
  font-size: 26rpx;
  color: #856404;
}