/**
 * components/courseContentDisplay/courseContentDisplay.wxss
 * 课程内容展示组件样式
 */
@import '/style/iconfont.wxss';

/* 课程内容区域 */
.course-content-section {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1d1d1f;
}

.edit-content-btn {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 24rpx;
  font-size: 26rpx;
  color: #007aff;
  transition: all 0.2s ease;
}

.edit-content-btn:active {
  background-color: #e5e5ea;
  transform: scale(0.96);
}

.edit-content-btn .iconfont {
  font-size: 28rpx;
}

/* 文字内容 */
.content-text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 24rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

/* 图片内容 */
.content-images {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.content-image {
  width: 100%;
  height: 200rpx;
  border-radius: 12rpx;
  background-color: #f5f5f5;
}

/* 音频内容 */
.content-audios {
  margin-bottom: 24rpx;
}

.audio-item {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  margin-bottom: 12rpx;
  transition: all 0.2s ease;
}

.audio-item:last-child {
  margin-bottom: 0;
}

.audio-item:active {
  background-color: #e5e5ea;
  transform: scale(0.98);
}

.audio-item.playing {
  background-color: #e3f2fd;
}

.audio-item.playing .audio-icon {
  color: #007aff;
}

.audio-icon {
  font-size: 32rpx;
  color: #007aff;
  margin-right: 16rpx;
}

.audio-name {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.audio-duration {
  font-size: 24rpx;
  color: #86868b;
  font-family: -apple-system, BlinkMacSystemFont, monospace;
}

/* 视频内容 */
.content-videos {
  margin-bottom: 24rpx;
}

.content-video {
  width: 100%;
  height: 400rpx;
  border-radius: 12rpx;
  background-color: #000;
  margin-bottom: 16rpx;
}

.content-video:last-child {
  margin-bottom: 0;
}

/* 移除最后一个元素的底部边距 */
.course-content-section > view:last-child {
  margin-bottom: 0;
}

