/* 课程列表容器 */
.courses-container {
  padding: 24rpx 16rpx 200rpx 16rpx;
}

/* 课程卡片 */
.course-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
  position: relative;
  transition: all 0.3s ease;
}
.course-card-wrap{
  padding: 24rpx;
  display: flex;
  gap: 20rpx;
}

.course-card-wrap:active {
  transform: scale(0.98);
}

/* 状态标签 */
.status-tag {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 6rpx;
  font-size: 22rpx;
  z-index: 10;
}

.status-tag.status_0 {
  background-color: #ff9500;
  color: #fff;
}
.status-tag.status_1 {
  background-color: #cff632;
  color: #000;
}
.status-tag.status_2 {
  background-color: #86868b;
  color: white;
}

/* 课程图片 */
.course-image {
  width: 260rpx;
  height: 220rpx;
  border-radius: 20rpx;
  overflow: hidden;
}

.course-image image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

/* 课程信息 */
.course-info {
  flex: 1;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.course-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #000;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.meta-item {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #50525a;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.meta-item .icon {
  margin-right: 10rpx;
  font-size: 24rpx;
}

.meta-item .text {
  flex: 1;
}

/* 价格 */
.price {
  font-size: 32rpx;
  color: #ff6b35;
}

.course-bottom{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 30rpx 30rpx;
}
.cancel_reason{
  font-size: 28rpx;
  color: #666;
  padding: 0 30rpx 30rpx 30rpx;
}
/* 参与者信息 */
.participants {
  display: flex;
  align-items: center;
  gap: 12rpx;
}
.participants .avatar-list{
  display: flex;
  align-items: center;
}
.participants .avatar-list .avatar{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-left: -10rpx;
  border: 1rpx solid #fff;
}
.participant-count {
  font-size: 26rpx;
  color: #666;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  align-items: center;
  gap: 16rpx;
}
.action-btn {
  width: 158rpx!important;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  font-weight: normal;
  padding: 0;
}
.action-btn:active {
  transform: scale(0.98);
}
.action-btn.registration {
  background-color: #cff632;
  color: #000;
}
.action-btn.cancel {
  background-color: #f2f2f7;
  color: #333;
}